<script language="javascript">
	$(document).ready(function(){
		$('#search-button').click(function(){
			$('#search').submit();
		});
		$('#books').galleryView({
				filmstrip_size: 4,
				frame_width: 130,
				frame_height: 171,
				background_color: 'transparent',
				nav_theme: 'dark',
				border: 'none',
				easing: 'linear',
				show_captions:true,

				transition_interval: 2000,
				caption_text_color: 'black',
				pause_on_hover: true
		});
		
		$('.book-thumb').click(function(){
			var book_id = $(this).attr('book_id');
			$('#book-details').html('<div class="loading-book"><p>Loading Book...</p><img src="/images/loading1.gif"></div>');
			getBook(book_id);
		});
		$('#book-details').html('<div class="loading-book"><p>Loading Book...</p><img src="/images/loading1.gif"></div>');
		
		/*$('#book-details').load('/book/get?id=QZb_aG3iFscC');*/
		getBook('QZb_aG3iFscC');
		
		$('.change-date').click(function(){
			var event_id = $(this).attr('event_id');
			loading('#event-area', 7);
			$('#event-area').load('/index/get-event', {id:event_id});
			
		});
	});
</script>
