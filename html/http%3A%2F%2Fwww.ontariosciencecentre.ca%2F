          $(document).ready(function() {

              
              var liItem = $('#mainlevel-nav > li a');
              var liItem2 = $('#SecondaryMenu > li a');
              var liItem3 = $('#TertiaryMenu > li a');

              var currentSelection = $('#CurrentSelection').val();
              var currentSelectionFrench = $('#CurrentSelectionFrench').val();
              var parentOfCurrentSelection = $('#ParentOfCurrentSelection').val();
              var parentOfCurrentSelectionFrench = $('#ParentOfCurrentSelectionFrench').val();
              var level1Parent = $('#Level1Parent').val();
              var level1ParentFrench = $('#Level1ParentFrench').val();
              var level0Parent = $('#Level0Parent').val();
              var level0ParentFrench = $('#Level0ParentFrench').val();

              var subMenuForTertiary = $('#SubMenuForTertiary').val();
              var subMenuForTertiaryFrench = $('#SubMenuForTertiaryFrench').val();

              for (var i = 0; i < liItem.length; i++) {

                  if (liItem[i].title == currentSelection) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length; //exit the loop
                  }
                  else if (liItem[i].title == currentSelectionFrench) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length; //exit the loop
                  }
                  else if (liItem[i].title == parentOfCurrentSelection) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length; //exit the loop
                  }
                  else if (liItem[i].title == parentOfCurrentSelectionFrench) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length; //exit the loop
                  }
                  else if (liItem[i].title == level1Parent) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length;
                  }
                  else if (liItem[i].title == level1ParentFrench) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length;
                  }
                  else if (liItem[i].title == level0Parent) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length;
                  }
                  else if (liItem[i].title == level0ParentFrench) {
                      $(liItem[i]).addClass('selectedMenu');
                      //i = liItem.length;
                  }
              }

              for (var i = 0; i < liItem2.length; i++) {
                  //alert("" + liItem2[i] + "=" + subMenuForTertiary);

                  if (liItem2[i].title == currentSelection) {
                      $(liItem2[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == currentSelectionFrench) {
                      $(liItem2[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == level1Parent) {
                      $(liItem2[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == level1ParentFrench) {
                      $(liItem2[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == level0Parent) {
                      $(liItem2[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == level0ParentFrench) {
                      $(liItem2[i]).addClass('selectedMenu');
                      // i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == subMenuForTertiary) {
                      $(liItem2[i]).addClass('selectedMenu');
                      // i = liItem2.length;
                      break;
                  }
                  else if (liItem2[i].title == subMenuForTertiaryFrench) {
                      $(liItem2[i]).addClass('selectedMenu');
                      // i = liItem2.length;
                      break;
                  }
              }

              for (var i = 0; i < liItem3.length; i++) {
                  if (liItem3[i].title == currentSelection) {
                      $(liItem3[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                  }
                  else if (liItem3[i].title == currentSelectionFrench) {
                      $(liItem3[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                  }
                  else if (liItem3[i].title == level1Parent) {
                      $(liItem3[i]).addClass('selectedMenu');
                      // i = liItem2.length;
                  }
                  else if (liItem3[i].title == level1ParentFrench) {
                      $(liItem3[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                  }
                  else if (liItem3[i].title == level0Parent) {
                      $(liItem3[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                  }
                  else if (liItem3[i].title == level0ParentFrench) {
                      $(liItem3[i]).addClass('selectedMenu');
                      //i = liItem2.length;
                  }
              }

//              $('#mainlevel-nav').mouseover(function() {

//                   $("#SubMenu").show(1000);
//                })
//               .mouseout(function() {
//                $("#SubMenu").hide(1000);
//             }); 



              //sleepover auto sliders
              loadAutoSlider();

              try {
                  //color box
                  //$(".video-osc").colorbox({ iframe: true, innerWidth: "58.5%", innerHeight: "75%" });
                  $(".video-osc").colorbox({ iframe: true, innerWidth: "642", innerHeight: "465" });
              } catch (err) {
              }
              $(window).resize(function() {
                  try {
                      //$.fn.colorbox.resize({ width: "642", height: "465" });
                      $(".video-osc").colorbox({ iframe: true, innerWidth: "642", innerHeight: "465" });
                  }
                  catch (err) {
                  }
              });




          });
