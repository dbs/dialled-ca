   // Top Menu           
    $("#top-open").click(function() {
      if($("#top-dropdown").is(":visible")) {
        $("#top-dropdown").slideUp("fast");
        $("#top-menu").removeClass("active");
      } else {
        $("#top-dropdown").slideDown("fast");
        $("#top-menu").addClass("active");
      }
    });
    
   });
</script>






