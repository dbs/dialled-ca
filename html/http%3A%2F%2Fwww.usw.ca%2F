<style>
  .sticky {
    position: relative !important;
  }
</style>
<script type="text/javascript">
  var $container, page=1;

  $(function() {
  initMasonry();
  setInterval (initMasonry, 1000);
  
   function initMasonry(){
    $container = $('.masonry');
        
       $(".below").tabs({ 
         fx: { opacity: 'toggle' },
         speed: 'fast',
         activate: function() {
         $container.masonry('layout')
         }
       });
      
    // initialize
     $container.masonry({
       itemSelector: 'article',
       stamp: '.sticky',
       //"isFitWidth": true,
       columnWidth: 1
     });
    }
    
    $container.infinitescroll({
      navSelector  : '.page-nav',    // selector for the paged navigation 
      nextSelector : '.page-nav a',  // selector for the NEXT link (to page 2)
      itemSelector : 'article',     // selector for all items you'll retrieve
      path: function(number) {
        page += 1;
        return '/news/scroll/all?page=' + page;
      },
      loading: {
          finishedMsg: 'No more pages to load.',
          img: '/theme/img/ajax-loader.gif'
        }
      },
      // trigger Masonry as a callback
      function( newElements ) {
         $( newElements ).each(function(){
      		// check to see if the item is already in the feeed
      		var item_slug = $(this).attr('class').split(' ')[1];
      		var existing = $("." + item_slug);
      		console.log("checking for " + item_slug + " ...");
      		console.log(existing);
      	});
        // hide new items while they are loading
        var $newElems = $( newElements[0] ).css({ opacity: 0 });
      	//console.log($newElems);
         $container.masonry('reloadItems');
        // ensure that images load before adding to masonry layout
        $newElems.imagesLoaded(function(){
          // show elems now they're ready
          $newElems.animate({ opacity: 1 });
          $container.masonry( 'appended', $newElems, true );
          $container.masonry('reloadItems');
          $container.masonry();
          
          
          $container.find("a.previous").text("Load More").parent().removeClass("loading")
          $("a.previous").parent().show()
        });
      }
    );
    
    //Stop the automatic scrolling
    $(window).unbind('.infscr');
    
    $("a.previous").click(function(e) {
      e.preventDefault()
      $(this).parent().parent().infinitescroll('retrieve')
      $(this).text("Loading...").parent().addClass("loading").show()
      $("a.previous").parent().show()
    })
  });	
</script>

