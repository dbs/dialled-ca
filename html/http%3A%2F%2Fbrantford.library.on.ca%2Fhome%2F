<script type="text/javascript">	

function biblioLoad() {
	var biblio = document.createElement("iframe"); 
	biblio.src = "http://brantford.bibliocommons.com/embeds/carousel_rr";
	biblio.height = "315";
	biblio.width = "590";
	biblio.frameBorder="0";
	biblio.scrolling="no";
	biblio.allowtransparency="true";
	document.getElementById("biblio").appendChild(biblio);
}
function mosioLoad() {
	 var mosio = document.createElement("script"); 
	 mosio.src = "https://chat.mosio.com/chat/widget.js?keyword=askbplCA";
	 document.body.appendChild(mosio);
}
function gaLoad() {
//	var _gaq=[['_setAccount','UA-5354834-1'],['_trackPageview']];
//	(function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
//	g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
//	s.parentNode.insertBefore(g,s)}(document,'script')); 
}
function slidesLoad() {		 
	 var jqslide = document.createElement("script"); 
	 jqslide.src = "/js/libs/slides.min.jquery-ck.js";
	 document.body.appendChild(jqslide);
}
function ellipsisLoad() {
	 var jqellipsis = document.createElement("script"); 
	 jqellipsis.src = "/js/libs/jquery.autoellipsis-1.0.10.min-ck.js";
	 document.body.appendChild(jqellipsis);
}
function jQueryLoad() {	
	var jq = document.createElement("script"); 
	// jq.src = "//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js";
	jq.src = "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js";
	// jq.src = "http://code.jquery.com/jquery-1.9.0.min.js";
	// document.getElementsByTagName('head')[0].appendChild(jq);	
	document.body.appendChild(jq); 

	 var jqui = document.createElement("script"); 
	 jqui.src = "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js";
	 // document.body.appendChild(jqui);
}
function jQueryMigrateLoad() {	

	var jqm = document.createElement("script"); 
	jqm.src = "http://code.jquery.com/jquery-migrate-1.2.1.min.js";
	// document.getElementsByTagName('head')[0].appendChild(jqm);	
	document.body.appendChild(jqm);
}
function pluginsLoad() {	 
	 var plugins = document.createElement("script"); 
	 plugins.src = "/js/plugins-ck.js";
	 document.body.appendChild(plugins);
}
function scriptLoad() {	 

	 var myscript = document.createElement("script"); 
	 myscript.src = "/js/script-ck.js";
	 document.body.appendChild(myscript);
}
	
</script>
<script>
// Add a script elements as a child of the body
function downloadJSAtOnload() {

	// if (typeof jQuery == 'undefined') {}
	// setTimeout(function(){jQueryLoad()},00);
	// setTimeout(function(){jQueryMigrateLoad()},100);
	
	setTimeout(function(){slidesLoad()},00);
		
	setTimeout(function(){ellipsisLoad()},00);
	setTimeout(function(){mosioLoad()},100);
	// setTimeout(function(){pluginsLoad()},00);
	setTimeout(function(){scriptLoad()},50);
	
	setTimeout(function(){biblioLoad()},0);

	//gaLoad();	 
}
</script>
<script>
// Check for browser support of event handling capability
if (window.addEventListener)
window.addEventListener("load", downloadJSAtOnload, false);
else if (window.attachEvent)
window.attachEvent("onload", downloadJSAtOnload);
else window.onload = downloadJSAtOnload;
</script>

