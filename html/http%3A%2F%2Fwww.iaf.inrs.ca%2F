<script type="text/javascript">

 var t;

 $(document).ready(function() {
 	
 		$('div#header_menu_princ ul li').removeClass('active-trail');

// ************************ CODE POUR LA DÉFILEUSE **************** //
	
			// variables de base
			var slideControl = $('div.hslidebtns ul');
			// calcule automatiquement le nombre de slides contenues
			var slideNum = $('div.home_slides_in img').size(); 
			//alert (slideNum);
			// définir la largeur des slides
			//var slideWidth = 715;
			var slideWidth = 1425;
			var slideHeight = 285;
			// défini la largeur du conteneur automatiquement en fonction de la largeur d'une slide et du nombre de slides
			var containWidth = slideNum * slideWidth; 
			var containHeight = slideNum * slideHeight; 
			$('div.home_slides_in').css("width", containWidth);
			// assurer la complétion des actions avant de passer à l'autre
			var block = false;
			//$('div.home_slides_in').height(slideHeight);
			//$('div.corpo_slider div.cslide_slides div.cslide_slides_in').height(slideHeight);
			//$('div.corpo_slider div.cslide_slides div.cslide_slides_in div.cslide').height(slideHeight);
			// Calcul du nombre de slides pour créer la liste de contrôle
			$('div.home_slides_in img').each(function(i){
				var slideCount = parseInt(i)+1;
				slideControl.append('<li class="hslidec" rank='+ i + '> </li>');
				$('div.hslidebtns li:first').addClass('hslideactive first');
			});
			
			// Action pour le bouton NEXT
			
			function nextPicture(element) {
				
				//alert('rofl');
				clearTimeout(t);
				t = setInterval ( "interval()", 5000 );
				
				if (block == true) {}
				else {
					
					var currentBullet = element.parent('div.hslidebtns').find("ul li.hslideactive");
					var nextRank = currentBullet.next('li.hslidec').attr('rank');
					
					// si on est à la dernière slide, revenir à la première
					
					if (currentBullet.attr('rank') == slideNum - 1) {
						
						
						//alert('last');
					
						$("div.home_slides_in").animate({"left": "0px"}, 400);
					
						currentBullet.removeClass('hslideactive');
						element.parent('div.hslidebtns').find('li.hslidec').first().addClass('hslideactive');
						block = false;
					}
					
					else {
					
					// changer de slide avec le bouton NEXT
					//alert(slideWidth);
					//alert("-" + slideWidth * nextRank + "px");
					$("div.home_slides_in").animate({
						"left": "-" + slideWidth * nextRank + "px"
					}, 400);
					
					currentBullet.removeClass('hslideactive');
					currentBullet.next('li.hslidec').addClass('hslideactive');
					block = false;
					}
				}
				
			};
			
			$('div.hslidenext').click(function() {
				nextPicture($(this));
			});
			
			
			
			
			// action pour les boutons CHIFFRÉS (1, 2, 3, 4...)
			
			$('li.hslidec').click(function(){
				clearTimeout(t);
				t = setInterval ( "interval()", 5000 );
				// vérifie si le bouton a la classe active
				//alert('ici');
				if($(this).hasClass('hslideactive')){}
				 
				 else{
				 
					// change de slide selon l'attribut "RANK" défini dans les boutons CHIFFRÉS
					
					var slideRank = $(this).attr("rank");
				 
					$("div.home_slides_in").animate({
						"left": "-" + slideWidth * slideRank + "px"
					}, 400);
				 
					$(this).closest("div.hslidebtns").find("li.hslidec").removeClass('hslideactive');
					$(this).addClass('hslideactive');
					
					}
			});
			
	});
	
	function interval() {
		//currentSquare = $('li.hslideactive');
		//$('div.hslidenext').click();
	};
	
	//t = setInterval ( "interval()", 5000 );
	
</script>

