				<div class="home_bab">
	<div class="wrapper">
		<div class="bab_slides">
			<div class="bab_slides_in">

	
	
<a href="http://www.iaf.inrs.ca/sites/default/files/centre_iaf/capusles_flipbook/capsules.html"><img  class="imagefield imagefield-field_bab_image" width="958" height="122" alt="La santé en héritage" src="http://www.iaf.inrs.ca/sites/default/files/babillard/banniere_la_sante_en_heritage_flippingbook_0.jpg?1400078867" /></a>
			</div>
		</div>
		<div class="bab_slider_control">
			<div class="babslidecontrol clearfix">
				<div class="babslidebtns">
					<ul>
					</ul>
					<div class="babslidenext" related="box1">»</div>
				</div>
			</div>
		</div>
		
		
		
<script type="text/javascript">
 
 $(document).ready(function() {

// ************************ CODE POUR LA DÉFILEUSE DU BABILLARD **************** //
	
			// variables de base
			var slideControlBab = $('div.babslidebtns ul');
			// calcule automatiquement le nombre de slides contenues
			var slideNumBab = $('div.bab_slides_in img').size(); 
			//alert (slideNum);
			// définir la largeur des slides
			//var slideWidth = 715;
			var slideWidthBab = 958;
			var slideHeightBab = 122;
			// défini la largeur du conteneur automatiquement en fonction de la largeur d'une slide et du nombre de slides
			var containWidthBab = slideNumBab * slideWidthBab; 
			var containHeightBab = slideNumBab * slideHeightBab; 
			$('div.bab_slides_in').css("width", containWidthBab);
			// assurer la complétion des actions avant de passer à l'autre
			var block = false;
			//$('div.home_slides_in').height(slideHeight);
			//$('div.corpo_slider div.cslide_slides div.cslide_slides_in').height(slideHeight);
			//$('div.corpo_slider div.cslide_slides div.cslide_slides_in div.cslide').height(slideHeight);
			// Calcul du nombre de slides pour créer la liste de contrôle
			$('div.bab_slides_in img').each(function(i){
				var slideCountBab = parseInt(i)+1;
				slideControlBab.append('<li class="babslidec" rank='+ i + '> </li>');
				$('div.babslidebtns li:first').addClass('babslideactive first');
			});
			
			if (slideNumBab < 2) {
				$('div.babslidebtns').hide();
			}
			
			// Action pour le bouton NEXT
			
			function nextPictureBab(elementBab) {
				
				clearTimeout(time);
				time = setInterval ( "interBab()", 5000 );
				
				if (block == true) {}
				else {
					
					var currentBulletBab = elementBab.parent('div.babslidebtns').find("ul li.babslideactive");
					var nextRankBab = currentBulletBab.next('li.babslidec').attr('rank');
					
					// si on est à la dernière slide, revenir à la première
					
					if (currentBulletBab.attr('rank') == slideNumBab - 1) {
						
						
						//alert('last');
					
						$("div.bab_slides_in").animate({"left": "0px"}, 400);
					
						currentBulletBab.removeClass('babslideactive');
						elementBab.parent('div.babslidebtns').find('li.babslidec').first().addClass('babslideactive');
						block = false;
					}
					
					else {
					
					$("div.bab_slides_in").animate({
						"left": "-" + slideWidthBab * nextRankBab + "px"
					}, 400);
					
					currentBulletBab.removeClass('babslideactive');
					currentBulletBab.next('li.babslidec').addClass('babslideactive');
					block = false;
					}
				}
				
			};
			
			$('div.babslidenext').click(function() {
				nextPictureBab($(this));
			});
			
			
			// action pour les boutons CHIFFRÉS (1, 2, 3, 4...)
			
			$('li.babslidec').click(function(){
				if($(this).hasClass('babslideactive')){}
				 
				 else{
				 
					// change de slide selon l'attribut "RANK" défini dans les boutons CHIFFRÉS
					
					var slideRankBab = $(this).attr("rank");
				 
					$("div.bab_slides_in").animate({
						"left": "-" + slideWidthBab * slideRankBab + "px"
					}, 400);
				 
					$(this).closest("div.babslidebtns").find("li.babslidec").removeClass('babslideactive');
					$(this).addClass('babslideactive');
					
					}
			});
			
	});
	
	function interBab() {
		currentSquare = $('li.babslideactive');
		$('div.babslidenext').click();
	};
	
	time = setInterval ( "interBab()", 5000 );
	
</script>
</div>

