<script  type="text/javascript">
jQuery(document).ready(function($){


	$('#capclose').click(function() {
	closeBGOverlay();
	});

	$('#blackout').click(function() {
	closeBGOverlay();
	});

	$('#capopen').click(function() {
	openBGOverlay();
	});

	$('#bg-poster').click(function() {
	openBGOverlay();
	});



	function openBGOverlay(){

		if( $('#slider') ){
			$('#slider').css('visibility','hidden');
		}
		$('#blackout').css('z-index',9997);
		$('#blackout').css('display', 'block');

		$('#bg-poster').css('z-index', 9998);
		$('#bg-poster > img').css('opacity', 1);
//		$('#bgimg-meta').css('z-index', 9999);
		$('#bgimg-meta').css('visibility', 'visible');
		$('#capclose').css('display', 'block');
		$('#capopen').css('display', 'none');
	 }



	 function closeBGOverlay(){

	 	if( $('#slider') ){
			$('#slider').css('visibility','visible');
	 	}

		$('#blackout').css('z-index',-4);
		$('#blackout').css('display', 'none');

		$('#bg-poster').css('z-index', 'auto');
		$('#bg-poster > img').css('opacity', .6);

//		$('#bgimg-meta').css('z-index', 9999);
		$('#bgimg-meta').css('visibility', 'hidden');

		$('#capclose').css('display', 'none');
		$('#capopen').css('display', 'block');
	 }
});

</script>


