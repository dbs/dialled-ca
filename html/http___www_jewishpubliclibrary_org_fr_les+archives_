<script>
	$('parentBody').select('input.formBtn').each( function(el) {
		//el.insert( { before: new Element('div', { 'class':'formBtnLeft' }).update('&nbsp;') } );
		//el.insert( { after: new Element('div', { 'class':'formBtnRight' }).update('&nbsp;') } ); // this does not work in IE8
		el.wrap('div', { 'class': 'formBtnWrapper' });
		el.insert( { before: '<div class="formBtnLeft">&nbsp;</div>'} );
		el.insert( { after: '<div class="formBtnRight">&nbsp;</div>'} );
	});


	// changes the side menu to the submenu of the given menu
	function changeSideMenu(menuIdx) {
		if (!document.menuCache) document.menuCache = new Array();
		if (document.menuCache[menuIdx]) { // the sidemenu is in the cache
			changeSideMenu_response(document.menuCache[menuIdx]);
		}
		else { // the sidemenu must be requested to the server
			new Ajax.Request("/modules/side_menu.php", {
				parameters: { menuIdx: menuIdx },
				onSuccess: function (transport) {
					document.menuCache[menuIdx] = transport.responseText;
					changeSideMenu_response(transport.responseText);
				}
			});
		}
	}

	// replaces the sidemenu on the page with the given content
	function changeSideMenu_response(menuContent) {
		var sideMenu = $$('.sideMenu');
		if (sideMenu) {
			sideMenu = sideMenu[0];
			sideMenu.replace(menuContent);
		}
	}
</script>
