		function calendarClick() {
		   jQuery('#fullcalendar table .fc-body > tr').stop().css({'opacity' : '0', 'filter' : 'alpha(opacity=0)'});
			jQuery('.ajax-loader').fadeIn();
		   var moment = jQuery('#school-calendar').fullCalendar('getDate'); 
			var php_moment = moment.toISOString();
		
		   // jQuery('button.fc-prev-button, button.fc-next-button').unbind('click');
		   var nonce = jQuery('#school-calendar').attr('data-nonce');
		   var func = jQuery('#school-calendar').attr('data-func');
			
		   var data = {
			action : 'fc_get_month_events_function',
			security: nonce,
			php_moment: php_moment,
		   };
			
		   var ajax_url = 'https://italianculturalcentre.ca/wp-admin/admin-ajax.php';
			jQuery.ajax({
				type: "POST",
				url: ajax_url,
				data: data,
				success: function(response){
					jQuery('.ajax-loader').fadeOut();
					jQuery('.hidden-events').html(response);
					var events = [];
					 jQuery('.hidden-events').find('.event').each(function() {
						events.push({
							title: jQuery(this).attr('data-title'),
							start: jQuery(this).attr('data-start'),
							end: jQuery(this).attr('data-end'),
							url: jQuery(this).attr('data-url'),
							className: jQuery(this).attr('data-class')
						});
					 });
//					elements = 'events:[' + response + ']';
//					console.log (elements);
					jQuery('#school-calendar').fullCalendar( 'removeEvents');
					jQuery('#school-calendar').fullCalendar( 'addEventSource', events);
					jQuery('#school-calendar').fullCalendar( 'refetchEvents' );
					
					jQuery('#school-calendar table .fc-body > tr').stop().css({'opacity' : '1', 'filter' : 'alpha(opacity=100)'});
					return false;
				},
				error: function(MLHttpRequest, textStatus, errorThrown){  
					alert("There was an error: " + JSON.stringify(MLHttpRequest) +" "+textStatus+" "+ errorThrown);  
				 },
				 timeout: 10000 
			});

	  } // function calendarClick()
		jQuery('button.fc-prev-button').click(calendarClick);
		jQuery('button.fc-next-button').click(calendarClick);
	// add all your scripts here
        </script>
