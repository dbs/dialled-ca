<div id="rech_livre" style="display:none;">

<html> 
<div class="mainSearchForm"> 
<form  method="get" action="http://decouverte.uquebec.ca/primo_library/libweb/action/dlSearch.do?" name="primo" onsubmit="return validateForm()"> 
<p> 
<input type="hidden" value="default_tab" name="tab"> 
<input type="hidden" value="UQAR" name="institution"> 
<input type="hidden" value="false" name="onCampus"> 
<input type="hidden" value="1" name="indx"> 
<input type="hidden" value="true" name="dum"> 
<input type="hidden" value="UQAR" name="vid"> 
<input type="hidden" value="GUEST" name="group"> 
<input type="hidden" value="UQARPLUS" name="search_scope"> 
<input type="hidden" value="any,contains, " name="query"> 
<input type="hidden" value="fre" name="lang">
<input type="text" id="inputQueryPrimo" class="input" value=" "> 
<input type="submit" id="btn_lancer" class="btn" value="Lancer la recherche"> 
</form> 
<script> 
function validateForm() 
{ 
        var x=replaceAccents(document.getElementById("inputQueryPrimo").value); 
        if (x==null || x=="") 
        { 
                alert("Entrez un terme de recherche"); 
                return false; 
        } else {document.forms.primo.query.value="any,contains,"+x;} 
} 
function replaceAccents(s){ 
var sR = s; 
sR = sR.replace(/à/g,"a"); 
sR = sR.replace(/á/g,"a"); 
sR = sR.replace(/â/g,"a"); 
sR = sR.replace(/ã/g,"a"); 
sR = sR.replace(/ä/g,"a"); 
sR = sR.replace(/ç/g,"c"); 
sR = sR.replace(/è/g,"e"); 
sR = sR.replace(/é/g,"e"); 
sR = sR.replace(/ê/g,"e"); 
sR = sR.replace(/ë/g,"e"); 
sR = sR.replace(/ì/g,"i"); 
sR = sR.replace(/í/g,"i"); 
sR = sR.replace(/î/g,"i"); 
sR = sR.replace(/ï/g,"i"); 
sR = sR.replace(/ñ/g,"n"); 
sR = sR.replace(/ò/g,"o"); 
sR = sR.replace(/ó/g,"o"); 
sR = sR.replace(/ô/g,"o"); 
sR = sR.replace(/õ/g,"o"); 
sR = sR.replace(/ö/g,"o"); 
sR = sR.replace(/ù/g,"u"); 
sR = sR.replace(/ú/g,"u"); 
sR = sR.replace(/û/g,"u"); 
sR = sR.replace(/ü/g,"u"); 
sR = sR.replace(/ý/g,"y"); 
sR = sR.replace(/ÿ/g,"y"); 
return sR; 
} 
</script> 
</div> 

                     
