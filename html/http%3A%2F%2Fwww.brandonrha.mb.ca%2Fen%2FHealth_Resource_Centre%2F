			<script>

				window.location.href='http://www.pmh-mb.ca/';


				function clrValue(el) {
					if ( el.defaultValue == el.value ) {
						el.value = "";
					}

					// dynamic style
					if ( el.style ) {
						el.style.cssText = "";
					}
				}

				function PrintThisPage() { 
					var sOption = "toolbar=yes,location=no,directories=yes,menubar=yes,";
					sOption += "scrollbars=yes,width=760,height=600,left=50,top=25";
					var sWinHTML = document.getElementById('Print').innerHTML;
					var winprint = window.open("", "", sOption);
					winprint.document.open();
					winprint.document.write('<html><link href="/en/system/modules/ca.mb.brandonrha/resources/style.css" rel="stylesheet" type="text/css"><body>');
					winprint.document.write(sWinHTML);
					winprint.document.write('</body></html>');
					winprint.document.close();
					winprint.focus();
					winprint.print();
				}



			</script>

