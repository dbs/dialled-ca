<script type="text/javascript">

function toggleZoomScreenreset() {
document.body.style.webkitTransform = 'scale(1)';        // Chrome, Opera, Safari
  document.body.style.msTransform = 'scale(1)';          // IE 9
  document.body.style.transform = 'scale(1)';
  deltaH = $('body').height() / 2;
  $('body').css('margin-top', '0px'); 
} 

function toggleZoomScreenout() {
document.body.style.webkitTransform = 'scale(0.9)';        // Chrome, Opera, Safari
  document.body.style.msTransform = 'scale(0.9)';           // IE 9
  document.body.style.transform = 'scale(0.9)';
   deltaH = $('body').height();
   deltaH = deltaH * ( 1 - 0.9) / 2;
   str = '-' + deltaH + 'px';
   console.log(str);
   $('body').css({'margin-top': str});
} 

function toggleZoomScreenhalf() {
document.body.style.webkitTransform ='scale(1.2)';         // Chrome, Opera, Safari
  document.body.style.msTransform =   'scale(1.2)';        // IE 9
  document.body.style.transform = 'scale(1.2)';
  deltaH = $('body').height();
   deltaH = deltaH * ( 1.2 - 1) / 2;
 str = deltaH + 'px';
   console.log(str);
   $('body').css({'margin-top': str});
} 
function toggleZoomScreenin() {
document.body.style.webkitTransform = 'scale(1.3)';        // Chrome, Opera, Safari
  document.body.style.msTransform =  'scale(1.3)';         // IE 9
  document.body.style.transform = 'scale(1.3)';
  deltaH = $('body').height();
   deltaH = deltaH * ( 1.3 - 1) / 2;
str = deltaH + 'px';
   console.log(str);
   $('body').css({'margin-top': str});
} 
</script>



        <div class="five columns textSize"><span>Text Size :</span>
