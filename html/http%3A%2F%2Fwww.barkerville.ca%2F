<!-- module feature -->
<div id="feature-2-sub_row_9-0-1-0-0" class="module module-feature feature-2-sub_row_9-0-1-0-0 no-chart layout-icon-top size-small  ">

	
	
	<figure class="module-feature-image">

					<a href="http://www.barkerville.ca/activities/#placestoeat">
		
					<div class="module-feature-chart" data-percent="0" data-color="rgba(222,93,93, 1)" data-trackcolor="rgba(0,0,0,0)" data-linecap="butt" data-scalelength="0" data-rotate="0" data-size="100" data-linewidth="2" data-animate="2000">
		
							<div class="module-feature-background" style="background: rgba(63,184,79, 1)"></div>				<i class="module-feature-icon fa fa-cutlery" style="color: rgba(0,0,0, 1.00)"></i>			
