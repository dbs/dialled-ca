<script type="text/javascript">

     /*
     * Script to force same height
     */
    function equalHeight(group) {
        var tallest = 0;
        group.each(function() {
            var thisHeight = jQuery(this).height();
            if(thisHeight > tallest) {
                tallest = thisHeight;
            }
        });
        group.height(tallest);
    }

    var timeoutTimer;
    var wrapper = $('#mega_menu');
    var transitionTime = 200;

    function menuOut()
    {
        $('#header .navigation > ul > li a.selected').removeClass('selected');
        wrapper.fadeTo(transitionTime, 0, function(){
            wrapper.hide();
        });
    }

    function setTimeoutTimer()
    {
        timeoutTimer = setTimeout('menuOut()', 5);
    }

    function btnHover(obj) {
        clearTimeout(timeoutTimer);
        $(obj).addClass('selected');
        wrapper.show();
        equalHeight($('#mega_menu ul.niveau_2 > li'));
        wrapper.fadeTo(transitionTime, 1);
    }

    function btnOut() {
        setTimeoutTimer();
    }

    wrapper.hover(function(){
        clearTimeout(timeoutTimer);
    }, function(){
        setTimeoutTimer();
    });

    $('#header .navigation li.citoyen > a').hover(function(){
        btnHover(this);
    }, function(){
        btnOut();
    });
</script>
