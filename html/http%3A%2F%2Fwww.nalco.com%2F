//<![CDATA[
    var flashFile = "/static/flash/FMA.swf";
    var imagePath = " ";
    var XMLFile = "/static/xml/FMA_home.xml";

    var so = new SWFObject(flashFile, "fma_area", "733", "218", "8", "#ffffff");

    so.addVariable("imagePath", imagePath);
    so.addVariable("XMLFile", XMLFile);
    so.addParam("wmode", "opaque");
    so.write("banner");
    <!-- mp_trans_disable_start --> 
    function chooser () {
        var script=document.createElement('SCRIPT');
        var head = document.getElementsByTagName("head");
        script.type = "text/javascript";
        script.src="//es-la.nalco.com/mpel/chooser.js";        
        head[0].appendChild(script);

        return false;
    }

