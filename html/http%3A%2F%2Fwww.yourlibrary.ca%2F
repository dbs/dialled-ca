  <script type="text/javascript">
  	// Search box improvement: replaces the popup results with in-page results
	function init_new_searchbox() {
	    $("form[action='/search/search.cfm']").submit(function(e) {
	        if($("select[name='linklist']", $(this)).val() == 'rpl') {
	            try {
	                e.preventDefault();
	                var q = $("input[name='q']", $(this)).val();
	                var url = 'http://www.yourlibrary.ca/Search/custom_search_results.cfm?cx=014766253531464506082%3Ay6afzibuzeu&cof=FORID%3A11&area=rpl&q=' + escape(q);
	                window.location.href=url;
	                return false;
	            } catch(err) {
	                // Gracefully degrade to the old system on error
	                return true;
	            }
	        }
	    });
	}



	/**
	 * Tracks the usage of our header icons
	 *
	 */
	function init_icon_nav_tracking() {
	    $("#icon-nav li a").click(function(e) {
	    	e.preventDefault();
			var href = $(this).attr('href');
            var val = $(this).parent('li').attr('class');
	    	//console.log('Click: '+val);

            try {
                _gaq.push(['_trackEvent', 'Homepage', 'Header Icon Click', val]);
            } catch(err){}

            setTimeout(function() {
                document.location.href = href;
            }, 100);
	    });


	    $("#icon-nav li a").hover(function() {
		    	$(this).data("hoverStart", (new Date()).getTime());
	    	},
	    	function() {
	    		var hover_time = ((new Date()).getTime() - $(this).data("hoverStart")) / 1000;
	    		var val = $(this).parent('li').attr('class');

	    		if(hover_time > 0.45) {
		            try {
		                _gaq.push(['_trackEvent', 'Homepage', 'Header Icon Hover >= 0.4s', val]);
		                //console.log('Hovered for '+hover_time+' sec: '+val);
		            } catch(err){}
	        	}
        	}
        );
	}




	var jQueryScriptOutputted = false;
	function initJQuery() {

	    //if the jQuery object isn't available
	    if (typeof(jQuery) == 'undefined') {
	        if (! jQueryScriptOutputted) {
	            //only output the script once..
	            jQueryScriptOutputted = true;

	            //output the script (load it from google api)
	            document.write("<scr" + "ipt type=\"text/javascript\" src=\"https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js\"></scr" + "ipt>");
	        }
	        setTimeout("initJQuery()", 50);
	    } else {
	    	// ================ Begin jQuery javascript ================
	        $(function() {
	        	init_new_searchbox();
	        	init_icon_nav_tracking();

	        	// Init icon Nav
		  		$("#icon-nav li a").attr('title', '');
		  		$("#icon-nav li").hover(function() {
		  			$('.tooltip', this).show();
		  		}, function() {
		  			$('.tooltip', this).hide();
		  		});

		  		// Track PDF links
			    $("a[href$='pdf']").each(function(index) {
			      pdf_href = $(this).attr('href');
			      //pdfOnClick = "_gaq.push(['_trackEvent', 'PDF', 'Download', '" + pdf_href + "']);";
			      pdfOnClick = "_gaq.push(['_trackPageview', '" + pdf_href + "']);";
			      $(this).attr("onClick", pdfOnClick);
			    });
	        });
	    }

	}
	initJQuery();
  </script>

