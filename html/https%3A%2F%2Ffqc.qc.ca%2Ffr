<script>
HPJ_LC_MONETARY = 'fr_CA';

var prodon = {
    _cookie : false,
    cookieTime:30,
    _init:function(params){
        var self = this;
        if(typeof params.cookie != 'undefiend'){
            this._cookie = params.cookie !== 'false' ? params.cookie : false;
        }
        if(this._cookie !== 'false') {
            var _c = _cookie.get(this._cookie);   
            try{
                _c = JSON.parse(_c);
                if(_c !== null){
                    if(typeof _c.amountother != 'undefined'){
                        var amount = parseInt(_c.amountother);
                        self._removeActive();
                        jQuery('#amount-other-in').val(amount)
                            .siblings('input[name="amount"]')
                            .val(amount)
                            .prop('checked', true)
                            .closest('label')
                            .addClass('active-prodon');
                    }
                    else if(typeof _c.amount != 'undefined'){
                        var amount = parseInt(_c.amount);
                        jQuery('input[name="amount"]').each(function(){
                            if(jQuery(this).val() == amount){
                                self._removeActive();
                                jQuery(this)
                                    .prop("checked",true)
                                    .closest('label')
                                    .addClass('active-prodon');
                            }
                        })
                    }
                }
            }catch(e){console.log(e);}
        }
        this._event();
    },
    _event:function(){
        var self = this;
        jQuery(document).on('click','label[for^="amount-"]',function(){
            jQuery('label[for^="amount-"]').removeClass('active-prodon');
            jQuery(this).addClass('active-prodon');    
            var toPay = self._amount(false);
            console.log(toPay);
        }).on('submit','#prodon-form',function(e){
            if(self._amount(true) === false){
                e.preventDefault();    
            }
        }).on('keyup','#amount-other-in',function(e){
            var v = jQuery(this).val().replace(/[^\d\.\,]/g,'');
            console.log(v);
            jQuery(this).val(nformat(v));
            var toPay = self._amount(false);
            
            
        });
        
    },
    _amount:function(show){
        var amount = jQuery('label.active-prodon input[name="amount"]');
        if(amount.length){
            var save = 'amount';
            if(jQuery(amount).attr('id') == 'amount-other'){
                jQuery(amount).val(jQuery('#amount-other-in').val());
                save = 'amountother';
            }
            var toPay = parseFloat(jQuery(amount).val());
            if( isNaN(toPay) || toPay <= 0 ){
                jQuery(amount).val('');
                jQuery('#amount-other-in').val('');
                if(show){
                    jQuery('.error-amount').removeClass('hide');
                }
                this._save();
                return false;
            }
            this._save(save,toPay);
            jQuery('.error-amount').addClass('hide');
            return toPay;
        }
        if(show){
            jQuery('.error-amount').removeClass('hide');
        }
        return false;
    },
    _save:function(save,val){
        val = val||false;
        save = save||false;
        if(this._cookie !== false){
            var data = {};
            if(val !== false){
                data[save] = val;
            }
            var data = JSON.stringify(data); 
            _cookie.set(this._cookie,data,self.cookieTime); 
        }
    },
    _removeActive:function(){
        jQuery('label.active-prodon').removeClass('active-prodon');
    },
}

_cookie = {
    set:function(name,value,ttl) {
        var expires = "";
        if (ttl) { 
            var date = new Date();
            date.setTime( date.getTime() + parseInt(ttl) * 1000 );
            expires = "; expires="+date.toGMTString();
        } 
        document.cookie = name+"="+value+expires+"; path=/";
    },
    get:function(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for(var i=0;i < ca.length;i++) {
            var c = ca[i];
            while (c.charAt(0)==' ') c = c.substring(1,c.length);
            if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
        }
        return null;
    },
    del:function(name) {
        createCookie(name,"",-1);
    }
};

Array.prototype.ksort = function(array, key) {
    return array.sort(function(a, b) {
        var x = a[key]; var y = b[key];
        return ((x < y) ? -1 : ((x > y) ? 1 : 0));
    });
}
function nformat(n){
    var n = n.replace(/(\d)([\.\,])(.*)/g,'$1,$3').split(',');
        i = parseInt(n[0] = Math.abs(+n[0] || 0).toFixed(2)) + ""
        j = (j = i.length) > 3 ? j % 3 : 0,
        f = '';
    if(typeof n[1] != 'undefined'){
        f = ',' + n[1].replace(/(\d{2}).*/,'$1');
    }
    var output = (j ? i.substr(0, j) + ' ' : "") + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1 ") + f;
    return output
 };
prodon._init({cookie:'false'});
</script>                                                                           

