	<script language="javascript">		
		$(document).ready(function(){				  
			$(".subMenu").click(function(){	
				var contLeft = $('#contLeft').css('height');
				var hauteur = $(this).next('ul').outerHeight();	
				var res = contLeft.split("px"); 
				
				if ($(this).next('ul').css('display') == 'none') {
					contLeft = Number(res[0]) +  Number(hauteur);
					contLeft = contLeft + 'px';
					$('#contLeft').css('height',contLeft);	
				} else {
					contLeft = Number(res[0]) -  Number(hauteur);
					contLeft = contLeft + 'px';
					$('#contLeft').css('height',contLeft);	
				}
			});			
		});	
    </script>	

