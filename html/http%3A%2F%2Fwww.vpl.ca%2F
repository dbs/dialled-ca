    <script id="search_form_2015_support" type="text/javascript">    
    var vpl_default_search_prompt = 'Find books, music, movies and more';

(function($){
	var self, defaults = {};
	var Search = function(opt) {
		self = this;
		return self.init(opt);
	}
	Search.prototype = {
		init: function(opt) {
			
			if( ! window.console ) {
				window.console = {};
				window.console.log = function(){;};
			}
			
			console.log( 'Search init' );
		
			self.opts = $.extend({},defaults,opt);
			$('.hide').removeClass('hide');
			$('#globalQuery').attr('placeholder', self.opts.prompt );
			$('#searchTargets').change(self.toggle_target ); 
			$('input.search_button').bind('click',self.forward_to_search_engine);	
		
			$('#searchCatalogue').click();			
							
			return self;
		},
		
		
		//
		//	adjust the form action="" to match
		//	the selected option
		//
		toggle_target: function() {
			var option = $(this);
			var key = option.val();  // cat|web|calendar
		//	console.log( key );
			
			var action = '';
			var hidden = false;
			var inputField = '';
			
			if( key === 'cat' ) 
			{
				action = 'http:/'+'/vpl.bibliocommons.com/search';
				var formName = 'none';
				$('#globalQuery').data('which','cat').attr('placeholder','Search Catalogue');
				hidden = '<input type="hidden" name="t" id="t" value="keyword">';
			}
			else if( key === 'web' ) {
				action = 'http:/'+'/www.vpl.ca/psearch/index.php?query=';
				$('#globalQuery').data('which','web').attr('placeholder',"Search Website");
			}
			else if( key === 'calendar' ) {
				action = 'http:/'+'/vpl.bibliocommons.com/events#/events/search/q=';
				$('#globalQuery').data('which','calendar').attr('placeholder',"Search Events Calendar");
			}
			
			$('form#globalSearch').attr('action',action);
			if( hidden ) {
				$('#hiddenFields').empty().append( hidden );
			}
			else {$('#hiddenFields').remove();}
		},
		
		forward_to_search_engine: function() {
		
			var which = $('input[name="q"]').data('which');
			var q = $('#globalQuery').val();
			    q.replace(/ /g,'+');
			    q.replace(/%20/g,'+');
			
			var url = $('form#globalSearch').attr('action');
						
						
			if( which === undefined ) {	// the initiail state of the form without anyone clicking a radio button
				url = url + '?q=' + q + '&t=keyword';
		//		console.log( url );
				location.href = url;
				return false;
			}			
			else if( which === 'cat' ) {
				url = url + '?q=' + q + '&t=keyword';
		//		console.log( url );
				location.href = url;
				return false;	
			}
			else if( which === 'web' ) { 
				url = url + q;
		//		console.log( url );
				location.href = url;
				return false;	
			}
			else {
				// event calendar redirect
				url = url + q;
		//		console.log( url );
				location.href = url;				
				return false;
			}
		}
	}
	
	$.fn.search = function(opt) {
		return new Search(opt);
	};
}(jQuery));

jQuery().ready(function($){
	window.search = $().search(
	{
		prompt: 'Find books, music, movies and more'
	}
	);
});



    </script>
    
      

    
    
