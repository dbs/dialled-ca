<script type="text/javascript">

(function($){
	var self, defaults = {};
	var PPSlider = function(opt) {
		self = this;
		return self.init(opt);
	};
	PPSlider.prototype = {
		init: function(opt) {
		
			console.log( 'Popular Picks Slider init' );
			
			self.opt = $.extend({},defaults,opt);
			
			self.control = $('#popular_picks');
			self.slider = $('#picks_slider');
			self.slider.css('overflow','hidden');
			self.items = $('.pick_item');
			self.controls = $('#pick_controls');
		self.wrap_slides();
			$('#numberOfPicks').empty().text( self.num );
			self.position = 0; // first slide
			self.update_position();
			$('.pick_control').click( self.control_click );
			
			return self;
		},
		
		wrap_slides: function() {
		
		console.log( 'wrap_slides' );
			self.num = self.items.length;
			var width = self.opt.slideWidth * self.num;
			self.items.wrapAll( '<div id="slider_tray"/>' );
			$('#slider_tray').width( width+'px' );
			
		},
		
		update_position: function() {
			$('#currPos').empty().text( self.position + 1 );
		},
		
		update_buttons: function() {
			if( self.position == 0 ) 
			{$('#go_pick_left').hide();}
			else {$('#go_pick_left').show();}
			if( self.position === self.num -1 )
			{$('#go_pick_right').hide();}
			else {$('#go_pick_right').show();}
		},
			
		control_click: function() {
		
			console.log( 'control_click' );
		
			self.position = ($(this).attr('id')=='go_pick_right') ? self.position+1: self.position-1;
			self.update_position();
			self.update_buttons();
			var offset = self.opt.slideWidth * (-self.position);	
			$('#slider_tray').css('margin-left',offset+'px');
		}
	};

	$.fn.ppSlider = function(opt) {
		return new PPSlider(opt);
	};

}(jQuery));


jQuery().ready(function($){
	window.pop_picks_slider = $().ppSlider(
	{
		slideWidth: 460
	});	
});
</script>	
		
