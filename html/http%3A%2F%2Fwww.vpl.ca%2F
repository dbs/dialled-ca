<script type="text/javascript">

(function($){
	var self, defaults = {};
	var UpcomingSlider = function(opt) {
		self = this;
		return self.init(opt);
	};
	UpcomingSlider.prototype = {
		init: function(opt) {
		
		//	console.log( 'Upcoming Slider init' );
			
			self.opt = $.extend({},defaults,opt);
			
			self.control = $('#events');
			self.slider = $('#event_slider');
			self.slider.css('overflow','hidden');
			self.items = $('.event_float');
			self.controls = $('#event_controls');
			self.wrap_slides();
			$('#numberOfItems').empty().text( self.num );
			self.position = 0; // first slide
			self.update_position();
			$('.event_control').click( self.control_click );
			
			return self;
		},
		
		wrap_slides: function() {
			self.num = self.items.length;
			var width = self.opt.slideWidth * self.num;
			self.items.wrapAll( '<div id="innerWrap"/>' );
			$('#innerWrap').width( width+'px' );
			
		},
		
		update_position: function() {
			$('#currentPosition').empty().text( self.position + 1 );
		},
		
		update_buttons: function() {
			if( self.position == 0 ) 
			{$('#go_event_left').hide();}
			else {$('#go_event_left').show();}
			if( self.position === self.num -1 )
			{$('#go_event_right').hide();}
			else {$('#go_event_right').show();}
		},
			
		control_click: function() {
		
			self.position = ($(this).attr('id')=='go_event_right') ? self.position+1: self.position-1;
			self.update_position();
			self.update_buttons();
			var offset = self.opt.slideWidth * (-self.position);	
			$('#innerWrap').css('margin-left',offset+'px');
		}
	};

	$.fn.upcomingSlider = function(opt) {
		return new UpcomingSlider(opt);
	};

}(jQuery));


jQuery().ready(function($){
	window.upcoming_slider = $().upcomingSlider(
	{
		slideWidth: 460
	});	
});
</script>

