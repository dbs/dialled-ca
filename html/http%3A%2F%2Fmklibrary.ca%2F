									<script type="text/javascript">

										var titledisplay = document.getElementById('booktitledisplay'); //reference DIV used to contain related content

										var currentview = ("newarrivals");

										var newarrivalstitles = new Array()  //Array storing the corresponding description for each Carousel panel
											newarrivalstitles[0] = ("The Hexed<br />Heather Graham");
											newarrivalstitles[1] = ("King and Maxwell<br />David Baldacci");
											newarrivalstitles[2] = ("Deadline<br />Sandra Brown");
											newarrivalstitles[3] = ("Rose Harbor in Bloom<br />Debbie Macomber");
											newarrivalstitles[4] = ("The Wrong Girl<br />Hank Phillippi Ryan");
											newarrivalstitles[5] = ("Strong Rain Falling<br />Jon Land");
											newarrivalstitles[6] = ("Hostage<br />Kay Hooper");
											newarrivalstitles[7] = ("Rogue with a Brogue<br />Suzanne Enoch");
											newarrivalstitles[8] = ("The Kill List<br />Frederick Forsyth");
											newarrivalstitles[9] = ("W is for Wasted<br />Sue Grafton");

										var bestsellerstitles = new Array()  //Array storing the corresponding description for each Carousel panel

										stepcarousel.setup({
											galleryid: 'mygallery', //id of carousel DIV
											beltclass: 'belt', //class of inner "belt" DIV containing all the panel DIVs
											panelclass: 'panel', //class of panel DIVs each holding content
											autostep: {enable:true, moveby:1, pause:3000},
											panelbehavior: {speed:500, wraparound:true, persist:true},
											defaultbuttons: {enable: true, moveby: 1, leftnav: ['images/interface/left-arrow.png', 0, 60], rightnav: ['images/interface/right-arrow.png', -20, 60]},
											statusvars: ['statusA', 'statusB', 'statusC'], //register 3 variables that contain current panel (start), current panel (last), and total panels
											contenttype: ['ajax', 'widgets/best-sellers.html'], //content setting ['inline'] or ['ajax', 'path_to_external_file']
											oninit:function(){
											},
											onslide:function(){
												var titledisplay = document.getElementById('booktitledisplay');
												//Update DIV with this panel's related content (notice imageA-1 as the array index, as imageA starts at 1, while array at 0
												if (currentview=='newarrivals'){
													titledisplay.innerHTML = (newarrivalstitles[statusA-1]);
												}
												else if (currentview=='bestsellers'){
													titledisplay.innerHTML = (bestsellerstitles[statusA-1]);
												}
											}
										})

										function changetext(sender){
											titledisplay.innerHTML = (sender);
										}

										function resettext(){
											titledisplay.innerHTML = (newarrivalstitles[statusA-1]);
										}

										function loadnewarrivals(){
											title = document.getElementById('carouseltitle') //reference DIV used to contain related content
											title.innerHTML = 'New Arrivals'
											currentview = 'newarrivals'
											stepcarousel.loadcontent('mygallery', 'widgets/new-arrivals.html')
										}

										function loadbestsellers(){
											title = document.getElementById('carouseltitle') //reference DIV used to contain related content
											title.innerHTML = 'Best Sellers'
											currentview = 'bestsellers'
											stepcarousel.loadcontent('mygallery', 'widgets/best-sellers.html')
										}

										//var thewidths = document.getElementById('mygallery');

										//alert(thewidths.width);

									</script>

