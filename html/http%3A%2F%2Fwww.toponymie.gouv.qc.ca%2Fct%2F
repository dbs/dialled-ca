    jQuery(function () {
        // charger l'image de fond courante
        var fondCourant;
        if (!window.pageAccueil) {
            fondCourant = lireTemoin("fond");
            if (fondCourant != null) {
                $("body #wrap").css("backgroundImage", fondCourant);
            }
        }
    });


    function lireTemoin(nom) {
        var i, x, y, arrTemoins = document.cookie.split(";");
        for (i = 0; i < arrTemoins.length; i++) {
            x = arrTemoins[i].substr(0, arrTemoins[i].indexOf("="));
            y = arrTemoins[i].substr(arrTemoins[i].indexOf("=") + 1);
            x = x.replace(/^\s+|\s+$/g, "");
            if (x == nom) {
                return unescape(y)
            }
        }
    }


</script>
    </div>
    <script type="text/javascript">

        var creditPhoto = "Photo : Jérémie Gagnon,  CCDMD.";

        jQuery(function () {
            changerFondPage();
        });

        function ecrireTemoin(nom, valeur, expire) {
            var dateExpiration = new Date();
            dateExpiration.setDate(dateExpiration.getDate() + expire);
            var _valeur = escape(valeur) + ((expire == null) ? "" : ";expires=" + dateExpiration.toUTCString());
            document.cookie = nom + "=" + _valeur;
        }


        /**
          * Changer l'image de fond de la page d'accueil aléatoirement
          **/
        function changerFondPage() {
            var fondCourant = "url(/ct/images/interface/fonds/ete/86803.jpg)";
            jQuery("body #wrap").css("backgroundImage", fondCourant);

            // enregistrer la valeur courante dans un témoin :
            ecrireTemoin("fond", fondCourant, 1);

        }

    </script>
