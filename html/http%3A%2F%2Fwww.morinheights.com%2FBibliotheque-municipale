<script type="text/javascript">
function cjl_calendar_init() {
// on change la couleur selon les mots-cle...
jQuery("#calendar td").each(function(){
var title = jQuery(this).prop('title')
var titles = title.split("\n");
var title_class = "calendrier_bleu";
var title_texte = [];
jQuery.each(titles,function(i,title){
title_parts = title.split("|");
title_texte.push((title_parts.length==2 ? title_parts[1] : title_parts[0]));
if (title_parts[0]=='municipal' && title_class=="calendrier_bleu") {
title_class = 'calendrier_gris';
}
if (title_parts[0]=='loisir' && title_class=="calendrier_bleu") {
title_class = 'calendrier_vert';
}
if (title_parts[0]=='communautaire' && title_class=="calendrier_bleu") {
title_class = 'calendrier_jaune';
}
});
jQuery(this).addClass(title_class).prop('title',title_texte.join("\n"));
});
}





// apres un delai de 1 seconde on scrute le calendrier...
function cjl_calendar_delay() {
setTimeout(cjl_calendar_init, 1000);
}




// au chargement de la page on lance le timer...
jQuery(document).ready(function(){
cjl_calendar_delay();
// on ecoute les boutons du calendrier...
jQuery("#colonne_droite").on("click","a.ui-datepicker-prev, a.ui-datepicker-next, button.ui-datepicker-current",cjl_calendar_delay);
jQuery("#colonne_droite").on("change", ".ui-datepicker-month, .ui-datepicker-year", cjl_calendar_delay);
});
</script>





			
				
