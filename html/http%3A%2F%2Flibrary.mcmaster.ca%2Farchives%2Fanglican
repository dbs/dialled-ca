ock-36":"1","block-frontpage_search-quicktabs":"1","block-quicktabs-front_page_search":"1","block-block-37":"1","block-block-28":"1","block-frontpage_search-guides":"1","block-block-38":"1","block-block-39":"1","block-block-40":"1","block-block-41":"1","block-menu-menu-popular-links":"1","block-block-42":"1","block-nice-menus-1":"1","block-quicktabs-frontpage-search-tabs":"1","block-views--exp-articles-page":"1","block-menu-menu-library-news":"1","block-block-44":"1","block-menu-menu-media-service":"1","block-menu-menu-mcmaster-research-data-repo":"1","block-menu-menu-respect":"1","block-block-45":"1","block-block-43":"1","block-block-47":"1","block-menu-menu-maps-gis-maps":"1","block-menu-menu-data---statisti":"1","block-menu-menu-archives---rese":"1","block-views-disruption-notices-block-1":"1","block-views-library-hours-block-1":"1","block-views-8bdfcfc6797fe201390430c2957729be":"1","block-views-archives-staff-block-1":"1","block-user-online":"1","block-facetapi-a2jz7ncjfp0pmjs3u4gtgdnybjk1vte0":"1","block-facetapi-yyxtaxq41em06d1tszxys6bt6yrytppu":"1","block-facetapi-o1tpbepsqgh0bhurdogus5x1izta6vv6":"1","block-facetapi-ppcf01c1ftyruinfkagmjg4mzixb3w2k":"1","block-menu-menu-wwii-topographic-maps":"1","block-block-50":"1","block-menu-menu-ww1-trench-maps":"1","block-menu-menu-wwi-trench-maps-home":"1","block-block-51":"1","block-menu-menu-scholarly-commu":"1","block-easy-social-easy-social-block-1":"1","block-menu-menu-dash":"1"},"default_state":"1","slide_type":1,"slide_speed":200,"block_title":":header:first","block":"div.block","block_content":"div.content"},"dhtmlMenu":{"nav":"open","animation":{"effects":{"height":"height","opacity":"opacity","width":0},"speed":"500"},"effects":{"siblings":"close-same-tree","children":"none","remember":"0"},"filter":{"type":"blacklist","list":{"devel":"devel","menu-about-about":"menu-about-about","menu-anti-semitism--":"menu-anti-semitism--","menu-archives---rese":"menu-archives---rese","menu-archives-in-the-everyday":"menu-