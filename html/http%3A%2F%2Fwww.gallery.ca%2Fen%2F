		var $panels = $('.widgetCalendarTabPanel');
		$('a.widgetCalendarTab').click(function() {
			var $a = $(this);
			var $show = $('#' + $a.attr('rel'));
			
			$panels.hide();
			$show.show();
			$a.parent().addClass('current').siblings().removeClass('current');
			
			NGCenv.NGCscrollMain($a.attr('rel'));
			
			return false;
		});
