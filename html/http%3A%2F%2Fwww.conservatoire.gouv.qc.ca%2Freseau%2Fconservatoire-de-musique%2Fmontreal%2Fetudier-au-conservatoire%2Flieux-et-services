				newClassBg = randClassBg();
				if(newClassBg != currentClassBg){
					break;
				}
			}
			
			$("#containerBg div.topWhiteBg").fadeIn("slow",function(){
				
				$("#containerBg div.topElementBg").removeClass(currentClassBg);
				$("#containerBg div.topElementBg").addClass(newClassBg);
				$("#containerBg div.topWhiteBg").fadeOut("slow");
				currentClassBg = newClassBg;
				
			});
		});
		
		$('#link-nav-rub-26').click(function(){
			$('#sub-nav-rub-26').slideToggle('fast');
			return false;
		});
		
	});
/* ]]> */
</script>
