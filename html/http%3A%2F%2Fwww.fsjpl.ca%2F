<script>
	var removeClass = true;
	$(".nav-more").click(function () {
		$("header").toggleClass('header-open');
		$(".navigation-main ul").toggleClass('nav-open');
		removeClass = false;
	});
	$("header").click(function() {
		removeClass = false;
	});
	$(".navigation-main ul").click(function() {
		removeClass = false;
	});
	$("html").click(function () {
		if (removeClass) {
			$("header").removeClass('header-open');
			$(".navigation-main ul").removeClass('nav-open');
		}
		removeClass = true;
	});
</script>

