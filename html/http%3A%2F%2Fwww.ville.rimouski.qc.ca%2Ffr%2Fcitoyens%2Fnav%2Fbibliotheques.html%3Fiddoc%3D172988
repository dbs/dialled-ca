<script>
	function defaultValueInput(focus, inputValue) {
		if (focus) {
		  if (document.search.query.value == inputValue) {
			  document.search.query.value = "";
			}
		}
		else {
		  if (document.search.query.value == "") {
			  document.search.query.value = inputValue;
			}
		}
	}
</script>



