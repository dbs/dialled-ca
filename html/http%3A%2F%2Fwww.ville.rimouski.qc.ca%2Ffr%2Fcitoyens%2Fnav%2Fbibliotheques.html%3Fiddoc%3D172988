	<script>

jQuery(document).ready(function(){
   jQuery(".elementConcours").each(function(){
        var voteBtnLabel = jQuery(this).attr("votebtnlabel");
        if (voteBtnLabel == null)
            voteBtnLabel = "Voter";
        jQuery(this).append('<a href="#" class="concoursVoteGenBtn"><span>'+voteBtnLabel+'</span></a>');
    });
   jQuery(".concoursVoteGenBtn").on("click",function(e){
       
        e.preventDefault();
        var elementConcours = jQuery(this).parent(".elementConcours");
        var idelement= elementConcours.attr("idelement");
        var idconcours = elementConcours.attr("idconcours");
        var idcategorie= elementConcours.attr("idcategorie");
        vote(idconcours,idcategorie,idelement);
   });
   jQuery(".concoursVoteBtn").on("click",function(e){
       
        e.preventDefault();
        var btn = jQuery(this);
        var idelement= btn.attr("idelement");
        var idconcours = btn.attr("idconcours");
        var idcategorie= btn.attr("idcategorie");
        vote(idconcours,idcategorie,idelement);
   });
});
function vote(idconcours,idcategorie,idelement)
{
    
        alert("Vous devez vous authentifier pour voter");
        var currentUrl = escape(window.location.href);
        window.location.href="/fr/citoyens/service.prt?svcid=rimouski_iceweblogin1&urlAfterLogin="+currentUrl;
}
</script>
