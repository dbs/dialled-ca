<script type="text/javascript">

$(window).load(function() {
	//Load Hours Slider
    $("#hours-slider").flexisel({
        visibleItems: 3,
        animationSpeed: 4000,
        autoPlay: true,
		clone: true,
        autoPlaySpeed: 2000,            
        pauseOnHover: true,
        enableResponsiveBreakpoints: true,
        responsiveBreakpoints: { 
           
            tablet: { 
                changePoint:1200,
                visibleItems: 1
            }
        }	
    });
	    $("#eventlist").flexisel({
        visibleItems: 3,
        animationSpeed: 1000,
        autoPlay: true,
        autoPlaySpeed: 1000,            
        pauseOnHover: true

    });

		//Load main content
		$(".topContent").load("home.asp");
		
		$(".events").load("calendar.html");
		
		
		
		//Load Font Sizer
		$('#sizer').jfontsizer({
		applyTo: '.content',
		changesmall: '2',
		changelarge: '2',
		expire: 30
	});


    
});


//Enterprise Search
function search_cat()
{
search = document.getElementById('search').value
document.location.href = 'https://olsn.ent.sirsidynix.net/client/gorebay/search/results?qu='+ search +'&te=ILS';	 //IMPORTANT - change the library
}
</script>
