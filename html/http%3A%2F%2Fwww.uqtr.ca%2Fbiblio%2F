										}
						               ]
                          }
                         ];
	
      afficherOnglets(infosOnglets, groupeOnglet, objetOnglet);
	  
    }
	
	function afficherCacher(idElementAffichage, idElementLi, classeOuvert, classeFermer){
	  
	  var elementObjet = document.getElementById(idElementAffichage);
	  var elementLi    = document.getElementById(idElementLi);
	  
	  if(elementObjet.style.display == ""){
	    elementObjet.style.display = "none";
		elementLi.className = classeFermer;
	  }
	  else{
	    elementObjet.style.display = "";
		elementLi.className = classeOuvert;
	  }
	  
	}
	
</script>


