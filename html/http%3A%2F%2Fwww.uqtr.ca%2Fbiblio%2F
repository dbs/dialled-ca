            	<script type="text/javascript">
	//<![CDATA[
		function changeTypeRecherche(noChoix){
			if(noChoix == 0){
				document.getElementById('divPrimo').style.display    = "";
				document.getElementById('divGoogle').style.display   = "none";
				document.getElementById('divWorldCat').style.display = "none";
			}
			if(noChoix == 1){
				document.getElementById('divPrimo').style.display    = "none";
				document.getElementById('divGoogle').style.display   = "";
				document.getElementById('divWorldCat').style.display = "none";
		    }
			if(noChoix == 2){
				document.getElementById('divPrimo').style.display    = "none";
				document.getElementById('divGoogle').style.display   = "none";
				document.getElementById('divWorldCat').style.display = "";
		    }
	    }

            function validateFormPrimo(){
                var x=replaceAccents(document.getElementById("inputQueryPrimo").value);
				if (x==null || x==""){
                    alert("Entrez un terme de recherche");
                    return false;
                } 
				else {
                    document.forms.primo.query.value="any,contains,"+x;
                }
            }
		
            function replaceAccents(s){
            
            var sR = s;
            
            sR = sR.replace(/à/g,"a");
            sR = sR.replace(/á/g,"a");
            sR = sR.replace(/â/g,"a");
            sR = sR.replace(/ã/g,"a");
            sR = sR.replace(/ä/g,"a");
            sR = sR.replace(/ç/g,"c");
            sR = sR.replace(/è/g,"e");
            sR = sR.replace(/é/g,"e");
            sR = sR.replace(/ê/g,"e");
            sR = sR.replace(/ë/g,"e");
            sR = sR.replace(/ì/g,"i");
            sR = sR.replace(/í/g,"i");
            sR = sR.replace(/î/g,"i");
            sR = sR.replace(/ï/g,"i");
            sR = sR.replace(/ñ/g,"n");
            sR = sR.replace(/ò/g,"o");
            sR = sR.replace(/ó/g,"o");
            sR = sR.replace(/ô/g,"o");
            sR = sR.replace(/õ/g,"o");
            sR = sR.replace(/ö/g,"o");
            sR = sR.replace(/ù/g,"u");
            sR = sR.replace(/ú/g,"u");
            sR = sR.replace(/û/g,"u");
            sR = sR.replace(/ü/g,"u");
            sR = sR.replace(/ý/g,"y");
            sR = sR.replace(/ÿ/g,"y");
			
            sR = sR.replace(/\,/g," ");
            sR = sR.replace(/\./g," ");
            sR = sR.replace(/\(/g," ");
            sR = sR.replace(/\)/g," ");
            sR = sR.replace(/\{/g," ")
            sR = sR.replace(/\}/g," ");
            sR = sR.replace(/\[/g," ");
            sR = sR.replace(/\]/g," ");
            sR = sR.replace(/\#/g," ");
            sR = sR.replace(/\!/g," ");
            sR = sR.replace(/\//g," ");
            sR = sR.replace(/\$/g," ");
            sR = sR.replace(/\%/g," ");
            sR = sR.replace(/\&/g," ");
            sR = sR.replace(/\@/g," ");
            
            return sR;
            
            }
    //]]>
    </script>

