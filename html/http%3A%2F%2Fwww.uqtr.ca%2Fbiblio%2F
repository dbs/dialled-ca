    function gestionOnglet(groupeOnglet, objetOnglet){
      var infosOnglets = [
	                      {
						   "groupe"          : "groupeOnglet1",
						   "imageOnDefaut"   : "",
						   "classeOnDefaut"  : "",
						   "imageOffDefaut"  : "",
						   "classeOffDefaut" : "",
						   "onglets" : [
						                {
										 "idOnglet"  : "onglet1",
