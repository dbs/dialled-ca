		var imagePath = "/public/65ea2bc4-166b-4136-a916-c2b8f639c6aa/RotationImages/";

		var folderCurrent = "" + "Biblio";

		

		function RandomImage()

		{

			if(folderCurrent.length == 0)

				return;		

			if(folderCurrent.indexOf("/") == -1)

			{			

				LoadXMLHeader("/Modules/KModThumbnails/galleries.asp?site=65ea2bc4-166b-4136-a916-c2b8f639c6aa&path=RotationImages/"+folderCurrent,"imgRd");

			}

			else

			{

				var div = document.getElementById("imgRd");

				var lpath = "http://"+window.location.host+imagePath+folderCurrent;

				var img = new Image();

				img.src = lpath;

				div.appendChild(img);

			}

		}

		

		var xmld= null;

		function LoadXMLHeader(url,idInsertIn)

		{

			var arrValid = new Array();

			var xmlhttp = new XMLHttpRequest();  

			xmlhttp.open("GET", url, false);  

			xmlhttp.send('');

			xmld = xmlhttp.responseXML;

			arrValid = xmlhttp.responseXML.getElementsByTagName('photo');

			var rd = Math.floor(Math.random() * arrValid.length);

			var path = arrValid[rd].childNodes[2].lastChild.nodeValue;

			var wrap=document.getElementById(idInsertIn);

			var mg = new Image();

			mg.src=path;

			wrap.appendChild(mg);

		}



		

		

		

