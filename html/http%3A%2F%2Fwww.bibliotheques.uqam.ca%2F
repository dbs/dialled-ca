<script type="text/javascript">// <![CDATA[
/*
Ce script sert à ouvrir une fenêtre aux dimensions similaires à un appareil mobile. 
Si le JavaScript est désactivé, l'hyperlien s'ouvrira normalement, sans dimensionner la fenêtre.
*/

// Stocker l'hyperlien dans une variable à l'aide de son ID

var hyperlienPc = document.getElementById('dispo');

// Obtenir le contenu de la balise hyperlien (c-a-d. l'image du bouton)

var itemContenu = hyperlienPc.innerHTML;

// Mettre à jour le contenu de l'hyperlien

hyperlienPc.innerHTML = '<a id=\"dispoOnclick\" href=\"javascript:void(0);\" onclick=\"popupCenter(\'http://dispo.bib.uqam.ca/pc\', \'myPop1\',400,650);\">' + itemContenu + '';

	
function popupCenter(url, title, w, h) {
var left = (screen.width/2)-(w/2);
var top = (screen.height/2)-(h/2);
return window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=yes, resizable=yes, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left);
}
