			var lastModule = $('#Cell2 .Module:last-child');
	
			$(window).resize (function () {
				$('.page-arrow').css ('left', firstModule.offset ().left + firstModule.width () / 2);
			}).resize ();
		
			$(window).scroll (function () {
				if ($(window).scrollTop () > firstModule.offset ().top) {
					$('.page-up-arrow').show ();
				} else {
					$('.page-up-arrow').hide ();
				}
				
				if (lastModule.offset ().top + lastModule.height () > $(window).scrollTop () + $(window).height ()) {
					$('.page-down-arrow').show ();            
				} else {
					$('.page-down-arrow').hide ();        
				}
			}).scroll ();
			
			$('.page-up-arrow').click (function () {
				$('html, body').animate ({scrollTop: '-=' + ($(window).height () - 50) + 'px'})
			});
			
			$('.page-down-arrow').click (function () {
				$('html, body').animate ({scrollTop: '+=' + ($(window).height () - 50) + 'px'})
			});
		}, 100);
