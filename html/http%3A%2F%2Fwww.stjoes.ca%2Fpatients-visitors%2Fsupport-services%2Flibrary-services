	var prevYear = '';
	
	$('.listModule_1210 .agenda-report').each (function () {
	    var reg = /\d\d\d\d-\d\d-\d\d/;
	    var str = $(this).find ('a').first ().text ().match (reg)[0];
	    var year = str.substr (0, 4);
	    str = str.substr (5);
	    var month = str.substr (0, 2);
	    str = str.substr (3);
	    var day = str;
	
	    var months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
	    month = months [Number (month) - 1];
	    str = month + ' ' + day + ', ' + year;
	    $(this).find ('a').first ().text ($(this).find ('a').first ().text ().replace (reg, str));
	    
	    $(this).parents ('.listRow').addClass ('listItem');
	    
	    if (prevYear != year) {
	    	prevYear = year;
	    	$(this).parents ('.listRow').before ('<div class = "listRow listYear">' + year + '</div>');
	    }
	});
	
	$('.listModule_1084 .fax').each (function () {
		if ($.trim ($(this).text ()).length <= 'Fax:'.length) {
			$(this).hide ();
		}
	});
	
