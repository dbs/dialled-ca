	$('#feedback-button').click (function () {
		$('.title-bar .formBuilder_166').clone ().dialog ({
			dialogClass:'feedback-popup',
			width:440,
			height:440,
			maxHeight:440,
			resizable:false,
			modal:true,
			title:'Provide your feedback',
			buttons:[
				{
					html:'Contact <a href = "mailto:publicaffairs@stjoes.ca">publicaffairs@stjoes.ca</a>',
					click:function () {
						document.location = 'mailto:publicaffairs@stjoes.ca';
					}
				},
				{
					html:'Close this window',
					click:function () {
						$(this).dialog ('close');
					}
				}
			],
			open:function (e, ui) {
				$('.feedback-popup .FormBuilderRadioGroup').each (function (i) {
					$(this).html ($(this).find ('input').wrap ('<p>').parent ().html ());
					var input = $(this).find ('input');
					input.attr ('id', 'rating-' + (i + 1));
					$(this).append ('<label for = "' + input.attr ('id') + '">' + (i + 1) + '</label>');
				});
              
              	$('.feedback-popup fieldset legend').addClass("AODACompliant");
				
				$('.feedback-popup .FormBuilderRadioGroup input').change (function () {
					$('.feedback-popup input[type=radio] + label').removeClass ('error');
					//console.log ('a');
					if ($('.ie-8').length) {
					//console.log ('b');
						$('.ie-8 .feedback-popup .FormBuilderRadioGroup input + label').removeClass ('active');
						$('.ie-8 .feedback-popup .FormBuilderRadioGroup input:checked + label').addClass ('active');
					}
				});
				
				$('.feedback-popup form').submit (function (e) {
					
					if ($(this).find ('input[type=radio]:checked').length <= 0) {
						$(this).find ('input[type=radio] + label').addClass ('error');
						e.preventDefault ();
						return false;
					} else {
						//$(this).find ('.formBuilderSubmit').attr ('type', 'button');
						$(this).find("textarea").css("display", "none").val($(this).find("textarea").val() + "\n\n" + document.location.href);
						return true;
					}
				}).ajaxForm(function(){
					$('.feedback-popup form').html("Thank you for your feedback.");
				});
				

			},
			close:function () {
				$('.feedback-popup').remove ();
			}
		});
	});
