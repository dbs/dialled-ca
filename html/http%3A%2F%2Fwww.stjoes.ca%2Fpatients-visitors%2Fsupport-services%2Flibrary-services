function ExtendSideBarHeight () {
	if ($('.Layout2 #Cell1').length) {

		/*var c = $('#Cell1');
		var f = $('footer');
		
		if (f.offset ().top < c.offset ().top + c.height ()) {
			$('#LayoutManager').height (c.height ());
		}*/
		
		$('.Layout2 #Cell1').css("height", "auto")
		$('.Layout2 #Cell2').css("height", "auto")
		
		//setTimeout (function () {
			var size = $('.Layout2 #Cell2').height();
			if($('.Layout2 #Cell1').height() > size)
			   size = $('.Layout2 #Cell1').height();
		
			size += 20;
		
			$('.Layout2 #Cell1').height(size);
			$('.Layout2 #Cell2').height(size);
			$('.inner-side').height(size);
			
			$("#home").css("padding-bottom", 0);
			
			//move footer
			 var homeHeight = $("#home").offset().top + $("#home").height();
			 var documentHeight = $(document).height();
			 var footerHeight = $("footer").height();
			 var difference = documentHeight - homeHeight - footerHeight;
			$("#home").css("padding-bottom", difference);
			
			if(difference > 2){
			  $('.Layout2 #Cell1').height(size + difference );
			  $('.Layout2 #Cell2').height(size + difference);
			  $('.inner-side').height(size + difference);
			}
			
		//}, 10);
		
		
		
	}
}

//GetPageVisits
function GetPageVisits () {
      if(typeof (JSON) != "undefined"){
	$.cookie.json = true;
	var array;
	
	//Get Page Information
	var currentPageHref = window.location.href;
	var index = (document.title).indexOf(" - ");
	var currentPageName = (document.title).substring(0, index);
	var currentInfo = {"name": currentPageName, "href":currentPageHref};

	// Either initiates cookie if it doesnt exist, or it if does, parse the JSON from it to get information
	if ($.cookie('pages') == null) {
		array = [];		
	} else {
		array = $.parseJSON($.cookie('pages'));
	}
	
	//Add current page to top of array, remove last in array
	array.unshift(currentInfo);
	
	// Will remove current page if it is already in the array
	for (var j = 1; j < array.length; j++) {
		if (array[0].name == array[j].name) {
			array.splice (j, 1);
			break;
		}
	}
	
	if (array.length > 5) {
		array.pop ();
	}

	// Append page visit information to pages underneath menus
	var i, opaque = 1.0, filter = 100;
	var ul = $('<ul class = "pages-visited-menu"></ul>');
	ul.append('Pages visited today');
	for (i = 0; i < (array.length); i++) {
		ul.append('<li style = "opacity:' +opaque+ '; filter:alpha(opacity=' +filter+ ');"><a href ="' + array[i].href + '" >' + array[i].name + "</a></li>");
		opaque = opaque - 0.15;
		filter = filter - 15;
	}
	$('.Layout2 #Cell1 .Module:last-child').append(ul);
	
	// Convert array back to JSOn to store in cookie and re-initialize
	var newString = JSON.stringify (array);
	$.cookie('pages', newString, { expires: 1, path: '/' });
	}
	
	/****************************************************/
	var pagesVisited = $('ul.pages-visited-menu');
	var quickHelp = $('<ul class = "quick-help-menu"></ul>');

	quickHelp.append('Quick Help');
	quickHelp.append($('<li><a href="/patients-visitors/your-visit-or-stay/maps-and-directions">Maps and Directions</a></li>'));
	//quickHelp.append($('<li><a href="#">Glossary of Medical Terms</a></li>'));
	
	pagesVisited.after(quickHelp);
	
	var contact = $('<ul class = "quick-contact-menu"></ul>');

	contact.append('Contact');
	contact.append($('<li><a href="/contact#charltonCampus">Charlton Campus</a></li>'));
	contact.append($('<li><a href="/contact#kingCampus">King Campus</a></li>'));
	contact.append($('<li><a href="/contact#west5thCampus">West 5th Campus</a></li>'));

	quickHelp.after(contact);	
}

function MoveMobileSubMenu () {
	var menu = $('.Layout2 #Cell1 .Module_33');
	var title = $('.Layout2 #Cell2 .pos_0 .module_title');
	
	if (menu.length && title.length) {
		menu.css ('margin-top', 0);
	
		if (menu.offset ().top <= title.offset ().top + title.height ()) {
			menu.css ('margin-top', (title.offset ().top + title.height () - menu.offset ().top + 20) + 'px');
		}
	}
}

	var winWidth = $(window).width(),
   	winHeight = $(window).height()-1; // -1 to force update on first load

	function HandleResize () {
	
	    var onResize = function() {
	        ExtendSideBarHeight ();
		
		if ($(window).width () < 768) {
			MoveMobileSubMenu ();
		} else {
			$('.Layout2 #Cell1 .Module_33').removeAttr ('style');
		}
	    }
	
	    //New height and width
	    var winNewWidth = $(window).width(),
	    winNewHeight = $(window).height();
	    var resizeTimeout ;
	    // compare the new height and width with old one
	    if(winWidth!=winNewWidth || winHeight!=winNewHeight)
	    {
	        window.clearTimeout(resizeTimeout);
	        resizeTimeout = window.setTimeout(onResize, 10);
	    }
	    //Update the width and height
	    winWidth = winNewWidth;
	    winHeight = winNewHeight;
	}

