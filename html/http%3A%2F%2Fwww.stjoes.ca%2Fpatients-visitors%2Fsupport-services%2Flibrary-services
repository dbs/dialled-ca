/*$(".Layout2 #Cell1 li ul").hide();
	
	$(".Layout2 #Cell1 li ").mouseenter(function(){openMenuItem($(this)) }).mouseleave(function(){openMenuItem($(this))})
	
function openCloseMenuItem(item){
    item.children("ul").slideToggle( 100);
    setTimeout(function () { ExtendSideBarHeight ();}, 100);	
}*/


function openMenuItem(item){
    item.parents(".menu-link").siblings("ul").slideToggle( 100);
    setTimeout(function () { ExtendSideBarHeight ();}, 100);	
}

function closeMenuItem(item){
    item.parents(".menu-link").siblings("ul").slideToggle( 100);
    setTimeout(function () { ExtendSideBarHeight ();}, 100);
    	
}

$(document).ready(function(){
	$(".Resource_1 .articlePreviewTitle a").each(function(){
	
		if (/.*Update:.*/g.test($(this).text())) {
			$(this).addClass("urgent");
		}
	});
	
	$('.Resource_1 .readMoreLink').each(function(){
			//force link to 125 year page
			if ( $(this).attr('href') == '/news-events/news/~1609-Celebrating-our-125th-Year-Anniversary' ) {
				$(this).attr('href', 'http://www.stjoes.ca/about/get-to-know-st.-joe-s/our-history/our-125th-year-anniversary');	
			}
	});
});

