function replaceAccents(s){ 
  var sR = s; 
 /* sR = sR.toLowerCase(); */
  sR = sR.replace(/à/g,"a"); 
  sR = sR.replace(/á/g,"a"); 
  sR = sR.replace(/â/g,"a"); 
  sR = sR.replace(/ã/g,"a"); 
  sR = sR.replace(/ä/g,"a"); 
  sR = sR.replace(/ç/g,"c"); 
  sR = sR.replace(/è/g,"e"); 
  sR = sR.replace(/é/g,"e"); 
  sR = sR.replace(/ê/g,"e"); 
  sR = sR.replace(/ë/g,"e"); 
  sR = sR.replace(/ì/g,"i"); 
  sR = sR.replace(/í/g,"i"); 
  sR = sR.replace(/î/g,"i"); 
  sR = sR.replace(/ï/g,"i"); 
  sR = sR.replace(/ñ/g,"n"); 
  sR = sR.replace(/ò/g,"o"); 
  sR = sR.replace(/ó/g,"o"); 
  sR = sR.replace(/ô/g,"o"); 
  sR = sR.replace(/õ/g,"o"); 
  sR = sR.replace(/ö/g,"o"); 
  sR = sR.replace(/ù/g,"u"); 
  sR = sR.replace(/ú/g,"u"); 
  sR = sR.replace(/û/g,"u"); 
  sR = sR.replace(/ü/g,"u"); 
  sR = sR.replace(/ý/g,"y"); 
  sR = sR.replace(/ÿ/g,"y"); 
  return sR; 
} 	 
	 
