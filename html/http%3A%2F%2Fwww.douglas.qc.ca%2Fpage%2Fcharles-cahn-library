				success: function(json) {
					$("#footer-subscribe-form-message").html("");
					$("#footer-subscribe-form-message-erreur").html("");
					if (json.ok == "1") {
						$("#footer-subscribe-form *").hide();
						$("#footer-subscribe-form-message").html(window.message_subscribe_content);
						$("#footer-subscribe-form-message").show();
