<script type="text/javascript">
	var attempt_counter = 0;
	function fix_height() {
		if (attempt_counter < 2) {
			setTimeout( function() {
				var twitter_iframe = $('.twitter-timeline-rendered');
				if (twitter_iframe.length) {
					twitter_iframe.css('height', '100%');
					attempt_counter++;
				}
				fix_height();
			}, 500);
		}
	}
	fix_height();
</script>
