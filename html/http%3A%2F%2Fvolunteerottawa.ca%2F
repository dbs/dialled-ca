<script type="text/javascript">
function get_random(rand)
{
	if (!rand)
		return 0;

	var today = new Date()
	var seed = today.getSeconds()
	var ranNum = Math.floor(Math.random(seed)*1)
	return ranNum;
}
</script>

<script type="text/javascript">
$(document).ready(function() {
	$(function() {
		$('#676 img').show();
		$('#676').cycle({
			fx: 'fade',
			speed: 1500,
			timeout: 5000,
			startingSlide: get_random(1),
			slides: 'div'
		});
	});
});
</script>

