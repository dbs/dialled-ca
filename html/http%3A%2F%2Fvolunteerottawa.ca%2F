<script type="text/javascript">
	var twitter_css_set = 0;
	function twitter_css() {
		setTimeout( function() {
			if ( $('[id*=twitter]').length ) {
				$('[id*=twitter]').each( function(){
					var ibody = $(this).contents().find( 'body' );
					if ( ibody.find( '.timeline-Widget, .timeline .stream .h-feed li.tweet' ).length ) {
						ibody.find('.timeline-Widget, .timeline .stream').css('font-family', 'Arial,Helvetica,sans-serif');
ibody.find('.timeline-Widget, .timeline .stream .stats span, .timeline .stream .byline, .timeline .stream .retweet-credit, .timeline .stream .no-more-pane, .timeline .stream .no-tweets-pane p, .timeline .stream .p-geo, .timeline .stream .cards-base .byline-user, .Identity-screenName, .timeline .stream').css('color', '#000000');
ibody.find('.timeline-Widget, .timeline .stream p.e-entry-title').css('font-size', '100%');
ibody.find('.timeline-Widget, .timeline-Tweet').css('padding', '0 0 10px 0');
ibody.find('.timeline-Widget, .timeline-Tweet').css('background-color', 'transparent');
ibody.find('.timeline-Widget, .timeline-Tweet-text').css('font-size', '15px');
ibody.find('.timeline-Widget').css('padding', '0');
ibody.find('.timeline-Tweet-media').css('display', 'none');

						twitter_css_set = 1;
					}
				});
			}
			if (!twitter_css_set) {
				twitter_css();
			}
		}, 500);
	}
	twitter_css();
</script>
