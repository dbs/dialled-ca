<script>

	(function ($) {
		$(document).ready(function(){
			$('.rightMenuButton').click(function(){
				$('.secondaryMenuHolder').toggleClass("open")
				$('.rightMenuButton').toggleClass("open")
			})



			$(".toContent").click(function(e){
				e.preventDefault();
				$('.radix-layouts-content').addClass("showMore")
				$('.radix-layouts-content').animate({scrollTop: $(".pane-node-field-section").outerHeight()},'slow', function(){
					$('.radix-layouts-content .pane-node-field-section').hide()
				});
			})

			$(".l-region--highlighted li.expanded").prepend("<span class='expander'>&nbsp;</span>")

			$(".l-region--highlighted li.expanded").on("click", ".expander", function(){

				$(this).parents("li").first().toggleClass("active-trail")
			})

			if (typeof(localStorage) !== "undefined") {
				$("#large-font-button").click(function(){
					localStorage.setItem("font-sizer", "large");
					$("body").removeClass("small-font").addClass("large-font");
				});
				$("#small-font-button").click(function(){
					localStorage.setItem("font-sizer", "small");
					$("body").removeClass("large-font").addClass("small-font");
				});

				if (localStorage.getItem("font-sizer") === "large") {
					$("#large-font-button").click();
				} else {
					$("#small-font-button").click();
				}
			} else {

			}

		})

		$(window).ready(function(){

				$( window ).resize(function() {
					calculateHeight();
				});
				calculateHeight();
				var windowWidth = $('body').outerWidth();
				if(windowWidth > 680){

					$('.secondaryMenuHolder .menu-block-wrapper  > ul > li').mouseenter(function(){

						var subHeight = $(this).find('> ul').height() ;
						var height = $('.secondaryMenuHolder').height()+20;

						$('.secondaryMenuHolder').height(height+subHeight)
					})

					$('.secondaryMenuHolder .menu-block-wrapper > ul > li').mouseleave(function(){
						$('.secondaryMenuHolder').css("height", "");
					})
				}
			//}
		});

		function calculateHeight(){

			var windowWidth = $('body').outerWidth();
			var windowHeight = $('body').outerHeight();
			var headerHeight = $('.l-header').outerHeight();
			var footerHeight = $(".l-footer-wrapper").outerHeight();
			if(windowWidth > 680){
				$('.radix-layouts-content').height(windowHeight - headerHeight - footerHeight);

				// force things to be the height of the content box
				$('.slideDescription .WhoWeWorkWithContainer, .slideDescription .WhatWeDoContainer, .slideDescription .WhoWeAreContainer, .ThingWeDoesContainer, .VideoSlide, .MapSlide, .pane-case-studies-panel-pane-1, .sections .flexslider .slides .slideImageHolder img ').height(windowHeight - headerHeight - footerHeight);

			}
			$(".l-header  .navHolder ul li > ul").css("top", headerHeight+"px")
		}

	})(jQuery);




</script>

