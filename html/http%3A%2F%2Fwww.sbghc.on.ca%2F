$(function(){
	if ( $('#ManagementToolbar').length > 0 ) {
		$('#header-warning').css('display','block');
	}
	
	var textSize = readCookie("textSize");
	var q = $.parseQuery();
	setTextSize(textSize != null && textSize == "large" || q.textSize == "large" ? "large" : null);
  
	if( $('ul#sitemap').length !=0 ){
		$('ul > ul').wrap('<li />');
	}
	  
	if(  $('#homePageSliderWrap').length != 0 ){
  
		var slides = $('#homePageSliderWrap .listRow').length;
		var show = parseInt( Math.random() * slides );
		$('.listModule_1038 > .listRow:eq(' + show + ')').addClass('keeper');
		
		$('#homePageSliderWrap .listRow').each(function(){
			if( ! $(this).hasClass('keeper') ){ 
				$(this).remove(); 
			}
		});
		$('#homePageSliderWrap .keeper').fadeIn('slow', function() { });
	}
  
});
