<script type="text/javascript">
var tabsPlaying = false;
var $tabs = null;
$(document).ready(function(){  
	$tabs = $("#featured > ul").tabs({fx:{opacity: "toggle"}, rotateClicked: onTabClick});//.tabs("rotate", 5000, true);
	pauseTabs();
}); 
function onTabClick() {
	if ( tabsPlaying )
		pauseTabs();
}
function pauseTabs() {
	if ( !tabsPlaying ) {
		$tabs.tabs("rotate", 5000, false);
		$('#play-pause').text('Pause');
	} else {
		$tabs.tabs('rotate', null, false);
		$('#play-pause').text('Play');
	}
	tabsPlaying = !tabsPlaying;
}

</script>
