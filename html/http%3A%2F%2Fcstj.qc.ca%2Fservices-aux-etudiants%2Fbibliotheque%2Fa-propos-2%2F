<script type="text/javascript">
var move=true;
var timerOver;
var autoplay = true;

function resetTimer(){
	clearTimeout(timerOver);
	if(autoplay){
		timerOver=setTimeout("next()",7000);
	}
}

function calculerWidthTotal(){
	var widthFinal=0;
	jQuery('#items li').each(function(){
		widthFinal+=jQuery(this).width();
	});
	return widthFinal;
}
function prev()
{
	if(move){
		move=false;
		var nbSliders = jQuery('#items li').length;
		jQuery('#items').fadeOut(500,function(){
			jQuery('#items').css({'left':'+='+jQuery('#conteneurItems').css('width')});
			move=true;
			if(jQuery('#items').css('left')=='0px'){
				jQuery('#items').css('left','-'+((nbSliders-2)*jQuery('#conteneurItems').width())+'px');
			}
			setCercle();
			jQuery('#items').fadeIn(500);
		});

		resetTimer();
	}
}

function next()
{
	if(move){
		move=false;
		var nbSliders = jQuery('#items li').length;
		jQuery('#items').fadeOut(500,function(){
		jQuery('#items').css({'left':'-='+jQuery('#conteneurItems').css('width')});
			move=true;
			if(jQuery('#items').css('left')=='-'+(jQuery('#conteneurItems').width()*(nbSliders-1))+'px'){
				jQuery('#items').css('left','-'+jQuery('#conteneurItems').width()+'px');
			}
			setCercle();
			jQuery('#items').fadeIn(500);
		});

		resetTimer();
	}
}

function setCercle(){
	var leftActuel=parseInt(jQuery('#items').css('left'));
	var slider=leftActuel/-jQuery('#conteneurItems').width();
	jQuery('.cercle.actuel').removeClass('actuel');
	jQuery('.cercle').eq(slider-1).addClass('actuel');

}


jQuery(function()
{
	var premier=jQuery('#items li').eq(0);
	var dernier=jQuery('#items li').eq(-1);
	var cpt=1;

	if(jQuery('#items li').length > 1){
		//jQuery('#CerclesSlider').append('<div id="pause"></div>')

		jQuery('#items li').each(function(){
			jQuery('<div><div class="bgCercle siteCouleur"></div><div class="ugCercle"></div></div>').addClass('cercle').attr('rel',cpt).appendTo('#CerclesSlider');
			cpt++;
		});
	}
	else
	{
		autoplay = false;
	}

	jQuery('.cercle').eq(0).addClass('actuel');
	premier.clone(true,true).addClass('clone').appendTo('#items').removeAttr('id');
	dernier.clone(true,true).addClass('clone').prependTo('#items').removeAttr('id');
	jQuery('#items').css('left','-'+jQuery('#conteneurItems').width()+'px');

	resetTimer();

	jQuery('#slider').on('click','.cercle', function(){
		var slider=jQuery(this).index('.cercle')+1;
		var leftActuel=slider*-jQuery('#conteneurItems').width();


		if(move && !jQuery(this).hasClass('actuel')){
			jQuery('.cercle.actuel').removeClass('actuel');
			jQuery(this).addClass('actuel');
			move=false;
			var nbSliders = jQuery('#items li').length;
			jQuery('#items').fadeOut(500,function(){
				move=true;
				jQuery('#items').css({'left':leftActuel+'px'});
				if(jQuery('#items').css('left')=='-'+(jQuery('#conteneurItems').width()*(nbSliders-1))+'px'){
					jQuery('#items').css('left','-'+jQuery('#conteneurItems').width()+'px');
				}
				setCercle();
				jQuery('#items').fadeIn(500);
			});
			resetTimer();
		}

	});

	jQuery('#slider').on('click','#pause', function(){
		autoplay = !autoplay;
		resetTimer();
		if(autoplay){
			jQuery(this).removeClass('active');
		}
		else
		{
			jQuery(this).addClass('active');
		}

		return false;
	});
});
</script>


<div id="slider"  style="position:relative">
		<div id="conteneurItems">
			<ul id="items">

				<li><img width="625" height="235" src="http://cstj.qc.ca/wp-content/uploads/2012/05/cstj_carrousel_bibliotheque-625x235.jpg" class="attachment-Image de carrousel" alt="cstj_carrousel_bibliotheque" title="" /></li>

			</ul>
			<div id="CerclesSlider"></div>
		</div>
</div>




