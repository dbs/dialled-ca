        <script type="text/javascript">
            $(document).ready(function () {
                $("ul.lvl1 li").mouseover(function () {
                    $(this).children("ul.lvl2").show();
                });

                $("ul.lvl1 li").mouseout(function () {
                    $(this).children("ul.lvl2").hide();
                });

                $("ul.lvl2").mouseenter(function () {
                    $(this).prev().addClass("menuOn");
                });

                $("ul.lvl2").mouseleave(function () {
                    $(this).prev().removeClass("menuOn");
                });
            });
        </script>
