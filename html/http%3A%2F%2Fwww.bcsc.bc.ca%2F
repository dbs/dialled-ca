    <script type="text/javascript">
        $(document).ready(function () {
            AjaxCallCommon("/WebServices/PublicWebServices.asmx/CheckCache", "{}", null, null)
            //highlights navigation
            $(".breadCrumbs span").each(function (idx) {
                if (idx == 2) {
                    if ($(this).text().toLowerCase().indexOf("marketplaces") > -1) {
                        $("li.marketplaces").addClass("selected");
                    }
                    else if ($(this).text().toLowerCase().indexOf("for registrants") > -1) {
                        $("li.registrants").addClass("selected");
                    }
                    else if ($(this).text().toLowerCase().indexOf("for issuers") > -1) {
                        $("li.issuers").addClass("selected");
                    }
                }
            });

            $("img.fontBtn").click(function () {
                var bodyClass = $('#bodyTag').attr("class");

                if (this.id == "btnSmallFont") {
                    if (bodyClass == "smallFont") {
                        return true;
                    }

                    $("#btnBigFont").attr('src', "/Images/font_plus.png");

                    if (bodyClass == "") {
                        $(this).attr('src', "/Images/font_minus_disabled.png");
                        $('#bodyTag').attr("class", "smallFont");
                        $(this).css('cursor', 'default');
                    }
                    else {
                        $(this).attr('src', "/Images/font_minus.png");
                        $('#bodyTag').attr("class", "");
                        $(this).css('cursor', 'pointer');
                    }

                    return true;
                }

                if (this.id == "btnBigFont") {
                    if (bodyClass == "bigFont") {
                        return true;
                    }

                    $("#btnSmallFont").attr('src', "/Images/font_minus.png");

                    if (bodyClass == "") {
                        $(this).attr('src', "/Images/font_plus_disabled.png");
                        $('#bodyTag').attr("class", "bigFont");
                        $(this).css('cursor', 'default');
                    }
                    else {
                        $(this).attr('src', "/Images/font_plus.png");
                        $('#bodyTag').attr("class", "");
                        $(this).css('cursor', 'pointer');
                    }

                    return true;
                }
            });
        });
    </script>

