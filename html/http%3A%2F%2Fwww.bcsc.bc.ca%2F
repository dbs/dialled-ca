    <script type="text/javascript">
        $(document).ready(function () {
            setTimeout(function () {
                var maxHeight = 0;
                var preSetPading = 0;
                var browserVer = DetectIEBrowser();

                if (browserVer == -1) {
                    preSetPading = 20;
                }

                $(".homeBottomCols").each(function () {
                    if ($(this).height() > maxHeight) {
                        maxHeight = $(this).height();
                    }
                });

                var col3Height = $($(".homeBottomCols")[2]).height();

                if (col3Height + preSetPading > maxHeight) {
                    maxHeight = col3Height + preSetPading;
                }

                $(".homeBottomCols").height(maxHeight);
            }, 300);
        });
    </script>


