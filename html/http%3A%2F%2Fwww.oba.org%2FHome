<script type="text/javascript">
    
    Date.now = Date.now || function() { return +new Date; };
    
    //Twitter Parsers
    String.prototype.parseURL = function () {
        return this.replace(/[A-Za-z]+:\/\/[A-Za-z0-9-_]+\.[A-Za-z0-9-_:%&~\?\/.=]+/g, function (url) {
            return url.link(url);
        });
    };
    String.prototype.parseUsername = function () {
        return this.replace(/[@]+[A-Za-z0-9-_]+/g, function (u) {
            var username = u.replace("@", "");
            return u.link("http://twitter.com/" + username);
        });
    };
    String.prototype.parseHashtag = function () {
        return this.replace(/[#]+[A-Za-z0-9-_]+/g, function (t) {
            var tag = t.replace("#", "%23");
            return t.link("http://twitter.com/search?q=" + tag+"&src=hash");
        });
    };
    function parseDate(str) {
        var v = str.split(' ');        
        return new Date(Date.parse(v[1] + " " + v[2] + ", " + v[5] + " " + v[3] + " UTC"));
    }
    
    function MillisecondsToDuration(n) {
        var dtm = new Date();
        dtm.setTime(n);
        var d = 0;
        var h =  Math.floor(n / 3600000);
        var m = dtm.getMinutes();
        if (h > 24)
            d = parseInt(h / 24);

        if (d > 0)
            return d + ' Days ago';
        
        if(h > 0)
            return h + ' Hrs ago';
        
        return m + ' Mins ago';
    }

    function loadLatestTweet() {
        var url = '/api/twitter/get/OBALawyers?tweetCount=1';
        $.getJSON(url, function (data) {
            for (var i = 0; i < data.length; i++) {
                var tweet = data[i].text;
                var created = new Date(data[i].created_at);
                var createdDate = MillisecondsToDuration(Date.now() - created);
                tweet = tweet.parseURL().parseUsername().parseHashtag();
                var metaInfo = '<ul class="meta">';
                metaInfo += '<li><a href="https://twitter.com/#!/' +data[i].user_name + '/status/' + data[i].id_str + '"  target="_blank">' + createdDate + '</a></li>';
                metaInfo += '<li><a href="https://twitter.com/intent/tweet?in_reply_to=' + data[i].id_str + '" target="_blank">Reply</a></li>';
                metaInfo += '<li><a href="https://twitter.com/intent/retweet?tweet_id=' + data[i].id_str + '" target="_blank">Retweet</a></li>';
                metaInfo += '<li><a href="https://twitter.com/intent/favorite?tweet_id=' + data[i].id_str + '" target="_blank">Favourite</a></li>';
                metaInfo += '</ul>';
                $(".twitter-widget").append('<p class="tweet">' + tweet + metaInfo + '</p>');
            }
        });
    }  
    
</script>


