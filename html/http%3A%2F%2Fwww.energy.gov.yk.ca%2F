        function highlight()
        {  
        var pageurl = location.href;
        var dnl = document.getElementsByTagName("a");
        for(i = 0; i < dnl.length;i++)  
        {
        var x = dnl.item(i);    if  (x.href  == pageurl)      
        {
         x.style.backgroundColor = "#FBBD02";      
         x.style.borderLeftColor = "#273b44"; 
        }
      }
    }
    window.onload=highlight; 
    </script> 
