.pmeditorspick {display:none;float:right;margin:0px 20px;padding-left:20px;border-left:1px dotted gray;height:95px;overflow:hidden;}
.pmeditorspick .pmeditorspickcontent {float:left;width:335px;overflow:hidden;}
.pmeditorspick ul {padding:0;margin:0;float:left;position:relative;width:335px;}
.pmeditorspick ul li {list-style-type:none;float:left;width:335px;}
.pmeditorspick ul li figure {float:left;margin-right:15px;}
.pmeditorspick ul li figure img.wp-post-image {max-width:120px;max-height:90px;}
.pmeditorspick ul li article .label {font:normal 24px/24px "TitlingGothicFBCond-Standard",Arial,Helvetica,sans-serif;margin-bottom:10px;}

.pmeditorspick .counter {cursor:pointer;float:left;width:25px;margin: 6px 10px 0;font:normal 12px/12px "Shift-MediumItalic",Arial,Helvetica,sans-serif;margin-bottom:10px;}
.pmeditorspick .arrow {cursor:pointer;display:inline;}
.pmeditorspick .arrow:hover {opacity:0.4;}

@media only screen and (max-width: 1240px) {

	.adunit {float:none!important;margin-left:0px!important;}
	.pmeditorspick {display:none!important;}

}
