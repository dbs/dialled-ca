	<script type="text/javascript">
		var preventClose = false;
		
		
			$(document).ready(function () {
				$('.quickLinksHolders').hide();
				
				$('.quickLinks').click(function () {
					if($('.quickLinksHolders').css('display') != "none"){
						$('.quickLinksHolders').hide();
					}else{
						$('.quickLinksHolders').show();
					}
				});
				
				
				$('.quickLinksHolders, .quickLinks').hover(
					function() {
						preventClose = true;
					},
					function() {
						preventClose = false;
					}
				);
				
				$('body').mouseup(function() {
					if (!preventClose) {
						$('.quickLinksHolders').hide();
					}
				});
			});
		
	</script>
