	jQuery(document).ready(function($) {
		$(".call2action").click(function(){
			if($("#strength" + $(this).data("show")).is(":visible")){
				$(".action_text").fadeOut();
			}else{
				$(".action_text").hide();
				$("#strength" + $(this).data("show")).fadeIn('slow');
			}
		});
		var j = 0;
		 var delay = 3000; //millisecond delay between cycles
		 function cycleThru(){
				 var jmax = $("ul#tweets li").length -1;
				 $("ul#tweets li:eq(" + j + ")")
						 .fadeIn('slow')
						 .animate({"opacity" : "1"} ,600)
						 .animate({"opacity" : "1"}, delay)
						 .animate({"opacity" : "0"}, 600, function(){
								$(this).hide();
								 (j == jmax) ? j=0 : j++;
								 cycleThru();
						 });
				 };

		 cycleThru();

	});
  </script>
  
