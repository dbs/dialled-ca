<script type="text/javascript">
/* <![CDATA[ */
function createCookie(name,value,days) {
	if (days) {
		var date = new Date();
		date.setTime(date.getTime()+(days*24*60*60*1000));
		var expires = "; expires="+date.toGMTString();
	}
	else var expires = "";
	document.cookie = name+"="+value+expires+"; path=/";
}

function readCookie(name) {
	var nameEQ = name + "=";
	var ca = document.cookie.split(';');
	for(var i=0;i < ca.length;i++) {
		var c = ca[i];
		while (c.charAt(0)==' ') c = c.substring(1,c.length);
		if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
	}
	return null;
}

function eraseCookie(name) {
	createCookie(name,"",-1);
}


function changetaille() {
    var x = readCookie('taille');
    if (x) {
    
        eraseCookie('taille');
        ajustetaille();
        
    } else {
    
        createCookie('taille','grande',14);
        ajustetaille();
        
    }
}

function ajustetaille() {

    var x = readCookie('taille');
    if (x) {
    
        var contenuc=document.getElementById("contenucentre");
        
        contenuc.className='colonnecentre2';
        
    } else {

        var contenuc=document.getElementById("contenucentre");

        contenuc.className='colonnecentre';
        
    }
    
}

function rechercheGoogle() {
    var query=escape(document.getElementById("txtRecherche").value);

    top.location="http://www.google.ca/search?q=site:cse.gouv.qc.ca+"+query;
    
}

function rechercheGouv() {
    var query=escape(document.getElementById("txtRecherche").value);
    top.location="http://recherched.gouv.qc.ca/internet/search.do?searchIn=sc_cse&charSet=ISO-8859-1&includesDir=http%3A%2F%2Fwww.cse.gouv.qc.ca%2Frecherche&includesFileExt=inc&displayLang=fr&searchLang=fr&source=www.cse.gouv.qc.ca&hitsPerPage=10&leftMenu=false&template=default&pageWidth=760px&horizontalAlign=center&headerHeight=100px&bottomHeight=100px&leftMenuWidth=0px&query="+query;
}
/* ]]> */
</script>
